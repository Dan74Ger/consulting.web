@{
    ViewData["Title"] = "Accesso Negato";
}

<div class="access-denied-page">
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-ban fa-5x text-danger"></i>
        </div>
        
        <h1 class="h2 mb-3 text-danger">Accesso Negato</h1>
        
        <div class="alert alert-danger d-inline-block">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Non hai i permessi necessari per accedere a questa risorsa.
        </div>
        
        <div class="mt-4">
            <p class="text-muted">
                Contatta l'amministratore di sistema se ritieni che questo sia un errore.
            </p>
            
            <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>
                Torna alla Dashboard
            </a>
        </div>
    </div>
</div>