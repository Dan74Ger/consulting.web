@model ConsultingGroup.Models.AttivitaCu
@{
    ViewData["Title"] = "Nuova Attività CU";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-plus me-2"></i>Nuova Attività CU
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IdAnno" class="form-label">Anno Fiscale</label>
                                <select asp-for="IdAnno" class="form-select" asp-items="ViewBag.AnniFiscali"></select>
                                <span asp-validation-for="IdAnno" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IdCliente" class="form-label">Cliente</label>
                                <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.Clienti"></select>
                                <span asp-validation-for="IdCliente" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IdProfessionista" class="form-label">Professionista</label>
                                <select asp-for="IdProfessionista" class="form-select" asp-items="ViewBag.Professionisti">
                                    <option value="">-- Seleziona Professionista --</option>
                                </select>
                                <span asp-validation-for="IdProfessionista" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NumCu" class="form-label">Numero CU</label>
                                <input asp-for="NumCu" class="form-control" type="number" min="0" placeholder="Inserisci numero CU">
                                <span asp-validation-for="NumCu" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Stati CU -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <h6 class="mb-0">Tipologie CU</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check mb-2">
                                        <input asp-for="CuLavAutonomo" class="form-check-input" style="accent-color: black; border: 2px solid black;">
                                        <label asp-for="CuLavAutonomo" class="form-check-label">CU Lav. Autonomo</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check mb-2">
                                        <input asp-for="CuUtili" class="form-check-input" style="accent-color: black; border: 2px solid black;">
                                        <label asp-for="CuUtili" class="form-check-label">CU Utili</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Stati Processo -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <h6 class="mb-0">Stati Processo CU</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-check mb-2">
                                        <input asp-for="InvioCu" class="form-check-input" style="accent-color: black; border: 2px solid black;">
                                        <label asp-for="InvioCu" class="form-check-label">Invio CU</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check mb-2">
                                        <input asp-for="RicevutaCu" class="form-check-input" style="accent-color: black; border: 2px solid black;">
                                        <label asp-for="RicevutaCu" class="form-check-label">Ricevuta CU</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check mb-2">
                                        <input asp-for="InvioClienteMail" class="form-check-input" style="accent-color: black; border: 2px solid black;">
                                        <label asp-for="InvioClienteMail" class="form-check-label">Invio Cliente Mail</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="InvioClienteMailData" class="form-label">Data Invio Cliente Mail</label>
                                        <input asp-for="InvioClienteMailData" class="form-control" type="date">
                                        <span asp-validation-for="InvioClienteMailData" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="Note" class="form-label">Note</label>
                                <textarea asp-for="Note" class="form-control" rows="3" placeholder="Note aggiuntive..."></textarea>
                                <span asp-validation-for="Note" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Torna all'Elenco
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Salva Attività CU
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
