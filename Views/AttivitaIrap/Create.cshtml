@model ConsultingGroup.Models.AttivitaIrap
@{
    ViewData["Title"] = "Nuova Attività IRAP";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-plus me-2"></i>Nuova Attività IRAP
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IdAnno" class="form-label">Anno Fiscale</label>
                                <select asp-for="IdAnno" class="form-select" asp-items="ViewBag.AnniFiscali"></select>
                                <span asp-validation-for="IdAnno" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IdCliente" class="form-label">Cliente</label>
                                <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.Clienti"></select>
                                <span asp-validation-for="IdCliente" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IdProfessionista" class="form-label">Professionista</label>
                                <select asp-for="IdProfessionista" class="form-select" asp-items="ViewBag.Professionisti">
                                    <option value="">-- Seleziona Professionista --</option>
                                </select>
                                <span asp-validation-for="IdProfessionista" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CodiceDr" class="form-label">Codice DR</label>
                                <input asp-for="CodiceDr" class="form-control" placeholder="Inserisci codice DR">
                                <span asp-validation-for="CodiceDr" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="RaccoltaDocumenti" class="form-label">Raccolta Documenti</label>
                                <select asp-for="RaccoltaDocumenti" class="form-select">
                                    <option value="da_richiedere">Da Richiedere</option>
                                    <option value="richiesti">Richiesti</option>
                                    <option value="ricevuti">Ricevuti</option>
                                    <option value="completata">Completata</option>
                                </select>
                                <span asp-validation-for="RaccoltaDocumenti" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="Note" class="form-label">Note</label>
                                <textarea asp-for="Note" class="form-control" rows="3" placeholder="Note aggiuntive..."></textarea>
                                <span asp-validation-for="Note" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Torna all'Elenco
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Salva Attività IRAP
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
