@model UserViewModel
@{
    ViewData["Title"] = "Elimina Utente";
}

<div class="user-management">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-0">
                <i class="fas fa-user-times me-2 text-danger"></i>
                Elimina Utente
            </h1>
            <p class="text-muted mb-0">Conferma l'eliminazione dell'utente</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Torna alla Lista
            </a>
        </div>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-warning" role="alert">
        <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <div>
                <strong>Attenzione!</strong> 
                Questa operazione non può essere annullata. Se l'utente ha creato dei dati, 
                verrà disabilitato invece di essere eliminato per preservare l'integrità dei dati.
            </div>
        </div>
    </div>

    <!-- User Details Card -->
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="fas fa-user me-2"></i>
                Dettagli Utente da Eliminare
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Nome Completo:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Username:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@Model.UserName</span>
                        </dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Ruolo:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Role == "Administrator")
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-crown me-1"></i>
                                    @Model.Role
                                </span>
                            }
                            else if (Model.Role == "UserSenior")
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-star me-1"></i>
                                    Senior
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-info">
                                    <i class="fas fa-user me-1"></i>
                                    @Model.Role
                                </span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Stato:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i>
                                    Attivo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-times me-1"></i>
                                    Non Attivo
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4">Creato il:</dt>
                        <dd class="col-sm-8">
                            @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </dd>

                        <dt class="col-sm-4">Ultimo Accesso:</dt>
                        <dd class="col-sm-8">
                            @(Model.LastLoginAt?.ToString("dd/MM/yyyy HH:mm") ?? "Mai effettuato")
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirmation Form -->
    <div class="card shadow mt-4">
        <div class="card-body">
            <div class="text-center">
                <h5 class="text-danger mb-3">
                    Sei sicuro di voler eliminare questo utente?
                </h5>
                <p class="text-muted mb-4">
                    Questa operazione eliminerà l'utente <strong>@Model.UserName</strong> dal sistema.
                    <br>
                    Se l'utente ha creato dei dati, verrà disabilitato invece di essere eliminato.
                </p>

                <form asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger me-2" onclick="return confirm('Sei sicuro di voler procedere con l\'eliminazione?')">
                        <i class="fas fa-trash me-2"></i>
                        Conferma Eliminazione
                    </button>
                </form>

                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>
                    Annulla
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
    }

    .alert {
        border: none;
        border-radius: 0.5rem;
    }

    .badge {
        font-size: 0.875em;
    }

    .btn {
        border-radius: 0.35rem;
    }
</style>

