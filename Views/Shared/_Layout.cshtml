<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestione Studio - Consulting Group SRL</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="icon" type="image/jpeg" href="~/images/favicon.jpg">
    <link rel="apple-touch-icon" href="~/images/favicon.jpg">
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Page-specific styles -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Admin Layout with Sidebar -->
        <div class="wrapper d-flex">
            <!-- Sidebar -->
            <nav id="sidebar" class="sidebar bg-dark">
                <div class="sidebar-header p-3 text-white">
                    <div class="d-flex align-items-center justify-content-start">
                        <i class="fas fa-building me-3 fs-4"></i>
                        <div class="d-flex flex-column">
                            <h6 class="mb-0 fw-bold text-nowrap">Consulting Group SRL</h6>
                            <small class="text-light opacity-75">Gestione Studio</small>
                        </div>
                    </div>
                </div>

                <ul class="list-unstyled components">
                    
                    <!-- Gestione Utenti - Solo Administrator -->
                    @if (User.IsInRole("Administrator"))
                    {
                        <li class="nav-item">
                            <a asp-controller="UserManagement" asp-action="Index" class="nav-link">
                                <i class="fas fa-users me-2"></i> Gestione Utenti
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="UserPermissions" asp-action="Index" class="nav-link">
                                <i class="fas fa-user-shield me-2"></i> Gestione Permessi
                            </a>
                        </li>
                    }
                    
                    <!-- Menu dinamico basato sui permessi personalizzati per tutti i ruoli -->
                    @await Component.InvokeAsync("UserPermissions")
                    
                    @* Sezioni specifiche per Administrator temporaneamente nascoste
                    @if (User.IsInRole("Administrator"))
                    {
                        <li class="nav-item">
                            <a asp-controller="Senior" asp-action="Reports" class="nav-link">
                                <i class="fas fa-chart-line me-2"></i> Reports Avanzati
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Senior" asp-action="Settings" class="nav-link">
                                <i class="fas fa-cogs me-2"></i> Impostazioni
                            </a>
                        </li>
                    }
                    *@
                    
                    @* Gestione Amministrativa spostata nel componente UserPermissions
                    <!-- Gestione Amministrativa - Solo Administrator -->
                    @if (User.IsInRole("Administrator"))
                    {
                        <li class="nav-item">
                            <a asp-controller="Admin" asp-action="GestioneAmministrativa" class="nav-link">
                                <i class="fas fa-shield-alt me-2"></i> Gestione Amministrativa
                            </a>
                        </li>
                    }
                    *@
                </ul>

                <div class="sidebar-footer p-3 mt-auto">
                    <div class="text-white">
                        <div class="mb-2">
                            <small>
                                <i class="fas fa-user me-1"></i>
                                @User.Identity?.Name
                            </small>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted">
                                @if (User.IsInRole("Administrator"))
                                {
                                    <span class="badge bg-danger">Administrator</span>
                                }
                                else if (User.IsInRole("UserSenior"))
                                {
                                    <span class="badge bg-primary">Senior User</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Basic User</span>
                                }
                            </small>
                        </div>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-light btn-sm w-100">
                                <i class="fas fa-sign-out-alt me-1"></i> Logout
                            </button>
                        </form>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <div id="content" class="content">
                <!-- Top Navigation -->
                <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                    <div class="container-fluid">
                        <button type="button" id="sidebarCollapse" class="btn btn-outline-secondary">
                            <i class="fas fa-align-left"></i>
                        </button>
                        
                        <div class="ms-auto d-flex align-items-center">
                            <img src="~/images/logo.png" alt="Logo" class="navbar-logo me-3" />
                            <span class="navbar-text">
                                <i class="fas fa-calendar me-1"></i>
                                @DateTime.Now.ToString("dd/MM/yyyy")
                            </span>
                        </div>
                    </div>
                </nav>

                <!-- Breadcrumb -->
                @await Html.PartialAsync("_Breadcrumb")

                <!-- Messages -->
                @await Html.PartialAsync("_Messages")

                <!-- Main Content -->
                <div class="container-fluid p-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Login Layout -->
        <div class="login-wrapper">
            @RenderBody()
        </div>
    }

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>