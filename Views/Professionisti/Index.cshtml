@model IEnumerable<ConsultingGroup.ViewModels.ProfessionistiViewModel>
@{
    ViewData["Title"] = "Gestione Professionisti";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-user-tie me-2"></i>
                            Gestione Professionisti
                        </h4>
                        <a asp-action="Create" class="btn btn-light">
                            <i class="fas fa-plus me-1"></i> Nuovo Professionista
                        </a>
                    </div>
                </div>

                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">
                                            <i class="fas fa-user me-1"></i>Nome Completo
                                        </th>
                                        <th scope="col">
                                            <i class="fas fa-info-circle me-1"></i>Stato
                                        </th>
                                        <th scope="col">
                                            <i class="fas fa-calendar me-1"></i>Data Attivazione
                                        </th>
                                        <th scope="col">
                                            <i class="fas fa-calendar-check me-1"></i>Anno Riattivazione
                                        </th>
                                        <th scope="col" class="text-center">
                                            <i class="fas fa-cogs me-1"></i>Azioni
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var professionista in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm rounded-circle bg-success text-white d-flex align-items-center justify-content-center me-2">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@professionista.NomeCompleto</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-@professionista.StatoCssClass">
                                                    @professionista.StatoDescrizione
                                                </span>
                                            </td>
                                            <td>
                                                @if (professionista.DataAttivazione.HasValue)
                                                {
                                                    <span class="text-muted">
                                                        <i class="fas fa-calendar-alt me-1"></i>
                                                        @professionista.DataAttivazione.Value.ToString("dd/MM/yyyy")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(professionista.AnnoFiscaleDescrizione))
                                                {
                                                    <span class="badge bg-info">
                                                        @professionista.AnnoFiscaleDescrizione
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@professionista.IdProfessionista" 
                                                       class="btn btn-sm btn-outline-info" title="Visualizza">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@professionista.IdProfessionista" 
                                                       class="btn btn-sm btn-outline-primary" title="Modifica">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    
                                                    @* Pulsante Cessa/Riattiva *@
                                                    <form asp-action="ToggleStatus" asp-route-id="@professionista.IdProfessionista" 
                                                          method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-outline-@(professionista.Attivo ? "warning" : "success")" 
                                                                title="@(professionista.Attivo ? "Cessa" : "Riattiva")"
                                                                onclick="return confirm('@(professionista.Attivo ? "Vuoi davvero cessare questo professionista?" : "Vuoi davvero riattivare questo professionista?")')">
                                                            <i class="fas fa-@(professionista.Attivo ? "pause" : "play")"></i>
                                                        </button>
                                                    </form>
                                                    
                                                    @* Pulsante Elimina *@
                                                    <form asp-action="DeleteConfirmed" asp-route-id="@professionista.IdProfessionista" 
                                                          method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-outline-danger" 
                                                                title="Elimina"
                                                                onclick="return confirm('Vuoi davvero eliminare questo professionista? Questa azione non puÃ² essere annullata.')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-user-tie fa-3x text-muted"></i>
                            </div>
                            <h5 class="text-muted">Nessun professionista trovato</h5>
                            <p class="text-muted">Inizia aggiungendo il primo professionista al sistema.</p>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i> Aggiungi Primo Professionista
                            </a>
                        </div>
                    }
                </div>

                @if (Model.Any())
                {
                    <div class="card-footer bg-light">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="fas fa-users fa-2x text-success me-3"></i>
                                    <div>
                                        <h5 class="mb-0">@Model.Count()</h5>
                                        <small class="text-muted">Totale Professionisti</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="fas fa-user-check fa-2x text-primary me-3"></i>
                                    <div>
                                        <h5 class="mb-0">@Model.Count(p => p.Attivo)</h5>
                                        <small class="text-muted">Attivi</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="fas fa-user-times fa-2x text-danger me-3"></i>
                                    <div>
                                        <h5 class="mb-0">@Model.Count(p => !p.Attivo)</h5>
                                        <small class="text-muted">Cessati</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
.avatar-sm {
    width: 40px;
    height: 40px;
    font-size: 0.875rem;
}

/* Stili per i pulsanti azioni */
.btn-group .btn {
    margin-right: 2px;
}

.btn-group .btn:last-child {
    margin-right: 0;
}
</style>
