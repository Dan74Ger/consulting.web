@model ConsultingGroup.ViewModels.TipologieInpsViewModel

@{
    ViewData["Title"] = "Modifica Tipologia INPS";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-edit me-2 text-primary"></i>Modifica Tipologia INPS</h2>
                    <p class="text-muted mb-0">Modifica i dati della tipologia INPS: <strong>@Model.Tipologia</strong></p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Torna all'Elenco
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-id-card me-2"></i>Informazioni Tipologia INPS
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.HiddenFor(model => model.IdTipologiaInps)
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Tipologia" class="form-label fw-bold">
                                    <i class="fas fa-tag me-1"></i>@Html.DisplayNameFor(model => model.Tipologia)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Tipologia" class="form-control" placeholder="Es: Artigiano, Commerciante, Lavoratore Autonomo...">
                                <span asp-validation-for="Tipologia" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Inserisci la tipologia INPS (artigiano, commerciante, lav. autonomo, ecc.)
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="RiattivatoPerAnno" class="form-label">
                                    <i class="fas fa-calendar-alt me-1"></i>@Html.DisplayNameFor(model => model.RiattivatoPerAnno)
                                </label>
                                <select asp-for="RiattivatoPerAnno" class="form-select" asp-items="@Model.AnniFiscaliDisponibili">
                                    <option value="">-- Seleziona Anno Fiscale (opzionale) --</option>
                                </select>
                                <span asp-validation-for="RiattivatoPerAnno" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Seleziona l'anno fiscale se questa tipologia Ã¨ stata riattivata per un anno specifico
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Informazioni di stato (solo visualizzazione) -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-info-circle me-1"></i>Stato Attuale
                                </label>
                                <div>
                                    @if (Model.Attivo)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check me-1"></i>Attiva
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark fs-6">
                                            <i class="fas fa-pause me-1"></i>Cessata
                                        </span>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-calendar me-1"></i>Data Attivazione
                                </label>
                                <div class="form-control-plaintext">
                                    @Model.DataAttivazione.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        @if (Model.DataCessazione.HasValue)
                        {
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-calendar-times me-1"></i>Data Cessazione
                                    </label>
                                    <div class="form-control-plaintext text-warning">
                                        @Model.DataCessazione?.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                            </div>
                        }

                        @if (Model.DataRiattivazione.HasValue)
                        {
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-redo me-1"></i>Data Riattivazione
                                    </label>
                                    <div class="form-control-plaintext text-info">
                                        @Model.DataRiattivazione?.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                            </div>
                        }

                        <hr class="my-4">

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i>Annulla
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i>Salva Modifiche
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






