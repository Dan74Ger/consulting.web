@model ConsultingGroup.ViewModels.TipologieInpsViewModel

@{
    ViewData["Title"] = "Crea Tipologia INPS";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-plus-circle me-2 text-success"></i>Crea Nuova Tipologia INPS</h2>
                    <p class="text-muted mb-0">Inserisci i dati della nuova tipologia INPS</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Torna all'Elenco
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-id-card me-2"></i>Informazioni Tipologia INPS
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Tipologia" class="form-label fw-bold">
                                    <i class="fas fa-tag me-1"></i>@Html.DisplayNameFor(model => model.Tipologia)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Tipologia" class="form-control" placeholder="Es: Artigiano, Commerciante, Lavoratore Autonomo...">
                                <span asp-validation-for="Tipologia" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Inserisci la tipologia INPS (artigiano, commerciante, lav. autonomo, ecc.)
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="RiattivatoPerAnno" class="form-label">
                                    <i class="fas fa-calendar-alt me-1"></i>@Html.DisplayNameFor(model => model.RiattivatoPerAnno)
                                </label>
                                <select asp-for="RiattivatoPerAnno" class="form-select" asp-items="@Model.AnniFiscaliDisponibili">
                                    <option value="">-- Seleziona Anno Fiscale (opzionale) --</option>
                                </select>
                                <span asp-validation-for="RiattivatoPerAnno" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Seleziona l'anno fiscale se questa tipologia Ã¨ stata riattivata per un anno specifico
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i>Annulla
                                    </a>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-save me-1"></i>Salva Tipologia
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






