@model ConsultingGroup.Models.TipologiaInps

@{
    ViewData["Title"] = "Dettagli Tipologia INPS";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-eye me-2 text-info"></i>Dettagli Tipologia INPS</h2>
                    <p class="text-muted mb-0">Visualizza i dettagli della tipologia INPS: <strong>@Model.Tipologia</strong></p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Torna all'Elenco
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.IdTipologiaInps" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i>Modifica
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Informazioni principali -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-id-card me-2"></i>Informazioni Principali
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted fw-bold">
                                <i class="fas fa-hashtag me-1"></i>ID Tipologia
                            </label>
                            <div class="form-control-plaintext">@Model.IdTipologiaInps</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted fw-bold">
                                <i class="fas fa-tag me-1"></i>Tipologia
                            </label>
                            <div class="form-control-plaintext fs-5 fw-bold text-info">@Model.Tipologia</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informazioni di stato -->
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Stato e Date
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted fw-bold">
                                <i class="fas fa-toggle-on me-1"></i>Stato
                            </label>
                            <div>
                                @if (Model.Attivo)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="fas fa-check me-1"></i>Attiva
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark fs-6">
                                        <i class="fas fa-pause me-1"></i>Cessata
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted fw-bold">
                                <i class="fas fa-calendar-plus me-1"></i>Data Attivazione
                            </label>
                            <div class="form-control-plaintext">
                                <i class="fas fa-calendar me-1 text-success"></i>
                                @Model.DataAttivazione.ToString("dd/MM/yyyy") alle @Model.DataAttivazione.ToString("HH:mm")
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted fw-bold">
                                <i class="fas fa-edit me-1"></i>Ultima Modifica
                            </label>
                            <div class="form-control-plaintext">
                                <i class="fas fa-calendar me-1 text-primary"></i>
                                @Model.DataModifica.ToString("dd/MM/yyyy") alle @Model.DataModifica.ToString("HH:mm")
                            </div>
                        </div>
                        @if (Model.DataCessazione.HasValue)
                        {
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted fw-bold">
                                    <i class="fas fa-calendar-times me-1"></i>Data Cessazione
                                </label>
                                <div class="form-control-plaintext text-warning">
                                    <i class="fas fa-calendar me-1 text-warning"></i>
                                    @Model.DataCessazione?.ToString("dd/MM/yyyy") alle @Model.DataCessazione?.ToString("HH:mm")
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Anno Fiscale di Riattivazione -->
            @if (Model.RiattivatoPerAnno.HasValue || Model.DataRiattivazione.HasValue)
            {
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-redo me-2"></i>Riattivazione per Anno Fiscale
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @if (Model.AnnoFiscaleRiattivazione != null)
                            {
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted fw-bold">
                                        <i class="fas fa-calendar-alt me-1"></i>Anno Fiscale
                                    </label>
                                    <div class="form-control-plaintext">
                                        <span class="badge bg-info fs-6">
                                            @Model.AnnoFiscaleRiattivazione.Anno - @Model.AnnoFiscaleRiattivazione.Descrizione
                                        </span>
                                    </div>
                                </div>
                            }
                            @if (Model.DataRiattivazione.HasValue)
                            {
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted fw-bold">
                                        <i class="fas fa-calendar-check me-1"></i>Data Riattivazione
                                    </label>
                                    <div class="form-control-plaintext text-info">
                                        <i class="fas fa-calendar me-1 text-info"></i>
                                        @Model.DataRiattivazione?.ToString("dd/MM/yyyy") alle @Model.DataRiattivazione?.ToString("HH:mm")
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Azioni rapide -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tools me-2"></i>Azioni Rapide
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.IdTipologiaInps" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Modifica Tipologia
                        </a>
                        
                        <form asp-action="ToggleStatus" asp-route-id="@Model.IdTipologiaInps" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" 
                                    class="btn btn-@(Model.Attivo ? "warning" : "success") w-100"
                                    onclick="return confirm('@(Model.Attivo ? "Vuoi davvero cessare questa tipologia INPS?" : "Vuoi davvero riattivare questa tipologia INPS?")')">
                                <i class="fas fa-@(Model.Attivo ? "pause" : "play") me-2"></i>
                                @(Model.Attivo ? "Cessa Tipologia" : "Riattiva Tipologia")
                            </button>
                        </form>

                        <hr>

                        <form asp-action="DeleteConfirmed" asp-route-id="@Model.IdTipologiaInps" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" 
                                    class="btn btn-outline-danger w-100"
                                    onclick="return confirm('Vuoi davvero eliminare questa tipologia INPS? Questa azione non puÃ² essere annullata.')">
                                <i class="fas fa-trash me-2"></i>Elimina Tipologia
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Informazioni di sistema -->
            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-cog me-2"></i>Informazioni Sistema
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.CreatedAt.HasValue)
                    {
                        <small class="text-muted d-block mb-1">
                            <i class="fas fa-plus-circle me-1"></i>
                            Creato: @Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    }
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <small class="text-muted d-block">
                            <i class="fas fa-edit me-1"></i>
                            Aggiornato: @Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    }
                </div>
            </div>
        </div>
    </div>
</div>






