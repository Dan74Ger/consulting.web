@model ConsultingGroup.ViewModels.UserPermissionsListViewModel
@{
    ViewData["Title"] = "Gestione Permessi Utenti";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-shield me-2"></i>
                        Gestione Permessi Utenti
                    </h4>
                    <small>Configura i permessi per utenti Senior e User</small>
                </div>
                
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Filtri di ricerca -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <form method="get" class="d-flex gap-3 align-items-end">
                                <div class="form-group">
                                    <label for="searchRole" class="form-label">Ruolo</label>
                                    <select name="searchRole" id="searchRole" class="form-select">
                                        <option value="">Tutti i ruoli</option>
                                        <option value="User" selected="@(Model.SearchRole == "User")">User</option>
                                        <option value="UserSenior" selected="@(Model.SearchRole == "UserSenior")">UserSenior</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="searchName" class="form-label">Nome/Username</label>
                                    <input type="text" name="searchName" id="searchName" class="form-control" 
                                           value="@Model.SearchName" placeholder="Cerca per nome...">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search me-1"></i>
                                        Filtra
                                    </button>
                                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">
                                        <i class="fas fa-times me-1"></i>
                                        Reset
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Tabella utenti -->
                    @if (Model.Users.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Utente</th>
                                        <th>Ruolo</th>
                                        <th>Email</th>
                                        <th>Permessi Principali</th>
                                        <th>Ultima Modifica</th>
                                        <th>Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                        @user.FullName.First()
                                                    </div>
                                                    <div>
                                                        <strong>@user.FullName</strong><br>
                                                        <small class="text-muted">@user.UserName</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (user.Role == "UserSenior")
                                                {
                                                    <span class="badge bg-info">Senior</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">User</span>
                                                }
                                            </td>
                                            <td>@user.Email</td>
                                            <td>
                                                <div class="d-flex flex-wrap gap-1">
                                                    @if (user.CanAccessGestioneClienti)
                                                    {
                                                        <span class="badge bg-primary">
                                                            <i class="fas fa-briefcase me-1"></i>Clienti
                                                        </span>
                                                    }
                                                    @if (user.CanAccessDatiUtenzaRiservata)
                                                    {
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-lock me-1"></i>Riservati
                                                        </span>
                                                    }
                                                    @if (user.CanAccessDatiUtenzaGenerale)
                                                    {
                                                        <span class="badge bg-info">
                                                            <i class="fas fa-folder-open me-1"></i>Generali
                                                        </span>
                                                    }
                                                    @if (!user.CanAccessGestioneClienti && !user.CanAccessDatiUtenzaGenerale)
                                                    {
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-exclamation-triangle me-1"></i>Accesso Limitato
                                                        </span>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <small>
                                                    @user.LastModified.ToString("dd/MM/yyyy HH:mm")<br>
                                                    <span class="text-muted">da @user.ModifiedBy</span>
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("Edit", new { id = user.UserId })" 
                                                       class="btn btn-outline-primary" title="Modifica Permessi">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("ResetToDefault", new { id = user.UserId })" 
                                                       class="btn btn-outline-warning" title="Ripristina Default"
                                                       onclick="return confirm('Ripristinare i permessi di default per questo utente?')">
                                                        <i class="fas fa-undo"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Nessun utente trovato</h5>
                            <p class="text-muted">Non ci sono utenti User o UserSenior che corrispondono ai criteri di ricerca.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-sm {
    width: 35px;
    height: 35px;
    font-size: 14px;
    font-weight: bold;
}
</style>