@model ConsultingGroup.Models.Attivita770

@{
    ViewData["Title"] = "Nuova Attività 770";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-plus me-2"></i>@ViewData["Title"]
                </h4>
            </div>
            
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <!-- Dati Principali -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="IdAnno" class="form-label">Anno Fiscale *</label>
                                <select asp-for="IdAnno" class="form-select" asp-items="ViewBag.IdAnno">
                                    <option value="">-- Seleziona Anno --</option>
                                </select>
                                <span asp-validation-for="IdAnno" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="IdCliente" class="form-label">Cliente *</label>
                                <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.IdCliente">
                                    <option value="">-- Seleziona Cliente --</option>
                                </select>
                                <span asp-validation-for="IdCliente" class="text-danger"></span>
                                <small class="form-text text-muted">Solo clienti con servizio Mod. 770 attivo</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="IdProfessionista" class="form-label">Professionista</label>
                                <select asp-for="IdProfessionista" class="form-select" asp-items="ViewBag.IdProfessionista">
                                    <option value="">-- Nessun Professionista --</option>
                                </select>
                                <span asp-validation-for="IdProfessionista" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Tipo MOD 770 -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0"><i class="fas fa-file-alt me-2"></i>Tipo MOD 770</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check mb-3">
                                        <input asp-for="Mod770LavAutonomo" class="form-check-input" style="accent-color: black; border: 2px solid black;" type="checkbox" />
                                        <label asp-for="Mod770LavAutonomo" class="form-check-label">
                                            MOD 770 Lavoro Autonomo
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check mb-3">
                                        <input asp-for="Mod770Ordinario" class="form-check-input" style="accent-color: black; border: 2px solid black;" type="checkbox" />
                                        <label asp-for="Mod770Ordinario" class="form-check-label">
                                            MOD 770 Ordinario
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Stati Lavorazione -->
                    <div class="card mb-4">
                        <div class="card-header bg-warning text-dark">
                            <h6 class="mb-0"><i class="fas fa-tasks me-2"></i>Stati Lavorazione</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check mb-3">
                                        <input asp-for="InserimentoDatiDr" class="form-check-input" style="accent-color: black; border: 2px solid black;" type="checkbox" />
                                        <label asp-for="InserimentoDatiDr" class="form-check-label">
                                            Inserimento Dati DR
                                        </label>
                                    </div>
                                    
                                    <div class="form-check mb-3">
                                        <input asp-for="DrInvio" class="form-check-input" style="accent-color: black; border: 2px solid black;" type="checkbox" />
                                        <label asp-for="DrInvio" class="form-check-label">
                                            DR Invio
                                        </label>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="form-check mb-3">
                                        <input asp-for="Ricevuta" class="form-check-input" style="accent-color: black; border: 2px solid black;" type="checkbox" />
                                        <label asp-for="Ricevuta" class="form-check-label">
                                            Ricevuta
                                        </label>
                                    </div>
                                    
                                    <div class="form-check mb-3">
                                        <input asp-for="PecInvioDr" class="form-check-input" style="accent-color: black; border: 2px solid black;" type="checkbox" />
                                        <label asp-for="PecInvioDr" class="form-check-label">
                                            PEC Invio DR
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- MOD CU -->
                    <div class="card mb-4">
                        <div class="card-header bg-secondary text-white">
                            <h6 class="mb-0"><i class="fas fa-file-alt me-2"></i>MOD CU</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check mb-3">
                                        <input asp-for="ModCuFatte" class="form-check-input" style="accent-color: black; border: 2px solid black;" type="checkbox" />
                                        <label asp-for="ModCuFatte" class="form-check-label">
                                            MOD CU Fatte
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check mb-3">
                                        <input asp-for="CuUtiliPresenti" class="form-check-input" style="accent-color: black; border: 2px solid black;" type="checkbox" />
                                        <label asp-for="CuUtiliPresenti" class="form-check-label">
                                            CU Utili Presenti <small class="text-muted">(per MOD 770 ordinari)</small>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Note -->
                    <div class="form-group mb-4">
                        <label asp-for="Note" class="form-label">Note</label>
                        <textarea asp-for="Note" class="form-control" rows="4" placeholder="Note aggiuntive..."></textarea>
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>
                    
                    <!-- Pulsanti -->
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Torna all'Elenco
                        </a>
                        
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Crea Attività 770
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
.form-check-input:checked {
    background-color: #000 !important;
    border-color: #000 !important;
}

.card-header {
    border-bottom: 2px solid rgba(255,255,255,0.2);
}

.form-control:focus, .form-select:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
}
</style>
