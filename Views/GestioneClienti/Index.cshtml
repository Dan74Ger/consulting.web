@{
    ViewData["Title"] = "Gestione Attività";
}

<div class="gestione-clienti">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-0">
                <i class="fas fa-briefcase me-2 text-primary"></i>
                Gestione Attività
            </h1>
            <p class="text-muted mb-0">
                Gestisci i clienti dello studio - Benvenuto, @ViewData["UserName"] 
                (@ViewData["UserRole"])
            </p>
        </div>
        <div>
            <a asp-action="Nuovo" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                Nuovo Cliente
            </a>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-rocket me-2"></i>
                        Azioni Rapide
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-action="Lista" class="btn btn-info btn-lg w-100">
                                <i class="fas fa-list mb-2 d-block fa-2x"></i>
                                Lista Clienti
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="Nuovo" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-user-plus mb-2 d-block fa-2x"></i>
                                Nuovo Cliente
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="Ricerca" class="btn btn-warning btn-lg w-100">
                                <i class="fas fa-search mb-2 d-block fa-2x"></i>
                                Ricerca Avanzata
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <button class="btn btn-secondary btn-lg w-100" disabled>
                                <i class="fas fa-chart-bar mb-2 d-block fa-2x"></i>
                                Report
                                <small class="d-block">(Prossimamente)</small>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Clienti Totali
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                0
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Clienti Attivi
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                0
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Nuovi Questo Mese
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                0
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                In Attesa
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                0
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity / Getting Started -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>
                        Centro di Gestione Attività
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="fas fa-briefcase fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">Sezione Gestione Attività</h5>
                        <p class="text-muted">
                            Qui potrai gestire tutti i clienti dello studio legale. Le funzionalità includono:
                        </p>
                        
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <h6 class="text-primary">
                                    <i class="fas fa-check-circle me-2"></i>
                                    Funzionalità Disponibili
                                </h6>
                                <ul class="list-unstyled text-start">
                                    <li><i class="fas fa-user-plus text-success me-2"></i>Aggiunta nuovi clienti</li>
                                    <li><i class="fas fa-edit text-info me-2"></i>Modifica dati clienti</li>
                                    <li><i class="fas fa-search text-warning me-2"></i>Ricerca avanzata</li>
                                    <li><i class="fas fa-archive text-secondary me-2"></i>Archiviazione pratiche</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-primary">
                                    <i class="fas fa-cog me-2"></i>
                                    In Sviluppo
                                </h6>
                                <ul class="list-unstyled text-start">
                                    <li><i class="fas fa-chart-bar text-muted me-2"></i>Report e statistiche</li>
                                    <li><i class="fas fa-calendar text-muted me-2"></i>Gestione appuntamenti</li>
                                    <li><i class="fas fa-file-pdf text-muted me-2"></i>Generazione documenti</li>
                                    <li><i class="fas fa-envelope text-muted me-2"></i>Sistema comunicazioni</li>
                                </ul>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <a asp-action="Nuovo" class="btn btn-primary me-2">
                                <i class="fas fa-plus me-1"></i>
                                Inizia Aggiungendo il Primo Cliente
                            </a>
                            <a asp-action="Lista" class="btn btn-outline-secondary">
                                <i class="fas fa-list me-1"></i>
                                Visualizza Lista Clienti
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>