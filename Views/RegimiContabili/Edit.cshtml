@model ConsultingGroup.ViewModels.RegimiContabiliViewModel
@{
    ViewData["Title"] = "Modifica Regime Contabile";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Modifica Regime Contabile
                    </h4>
                </div>

                <form asp-action="Edit" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="IdRegimeContabile" />

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="NomeRegime" class="form-label">
                                        <i class="fas fa-balance-scale me-1"></i>Nome Regime Contabile
                                    </label>
                                    <input asp-for="NomeRegime" class="form-control" placeholder="Inserisci il nome del regime contabile" />
                                    <span asp-validation-for="NomeRegime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="RiattivatoPerAnno" class="form-label">
                                        <i class="fas fa-calendar-check me-1"></i>Anno Fiscale di Riattivazione (opzionale)
                                    </label>
                                    <select asp-for="RiattivatoPerAnno" asp-items="Model.AnniFiscaliDisponibili" class="form-select">
                                    </select>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Seleziona un anno fiscale se questo regime contabile viene riattivato per un anno specifico.
                                    </div>
                                    <span asp-validation-for="RiattivatoPerAnno" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        @if (Model.DataAttivazione.HasValue)
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">
                                            <i class="fas fa-calendar-alt me-1"></i>Data Attivazione
                                        </label>
                                        <input type="text" class="form-control" value="@Model.DataAttivazione.Value.ToString("dd/MM/yyyy HH:mm")" readonly />
                                    </div>
                                </div>
                                @if (Model.DataModifica.HasValue)
                                {
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">
                                                <i class="fas fa-edit me-1"></i>Ultima Modifica
                                            </label>
                                            <input type="text" class="form-control" value="@Model.DataModifica.Value.ToString("dd/MM/yyyy HH:mm")" readonly />
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        @if (Model.DataRiattivazione.HasValue)
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">
                                            <i class="fas fa-calendar-check me-1"></i>Data Riattivazione
                                        </label>
                                        <input type="text" class="form-control" value="@Model.DataRiattivazione.Value.ToString("dd/MM/yyyy HH:mm")" readonly />
                                    </div>
                                </div>
                            </div>
                        }

                        @if (Model.DataCessazione.HasValue)
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">
                                            <i class="fas fa-calendar-times me-1"></i>Data Cessazione
                                        </label>
                                        <input type="text" class="form-control text-danger" value="@Model.DataCessazione.Value.ToString("dd/MM/yyyy HH:mm")" readonly />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Torna alla Lista
                            </a>
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.IdRegimeContabile" class="btn btn-outline-info">
                                    <i class="fas fa-eye me-1"></i>Visualizza
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i>Salva Modifiche
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






