@model ConsultingGroup.ViewModels.RegimiContabiliViewModel
@{
    ViewData["Title"] = "Dettagli Regime Contabile";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-balance-scale me-2"></i>
                        Dettagli Regime Contabile
                    </h4>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h2 class="text-primary mb-3">@Model.NomeRegime</h2>
                            
                            <div class="mb-3">
                                <span class="badge bg-@Model.StatoCssClass fs-6">
                                    <i class="fas fa-@(Model.Attivo ? "check" : "times") me-1"></i>
                                    @Model.StatoDescrizione
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="avatar-lg rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center mx-auto">
                                <i class="fas fa-balance-scale fa-3x"></i>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-uppercase text-muted mb-3">
                                <i class="fas fa-info-circle me-1"></i>Informazioni Generali
                            </h6>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Nome Regime:</label>
                                <p class="mb-0">@Model.NomeRegime</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Stato:</label>
                                <p class="mb-0">
                                    <span class="badge bg-@Model.StatoCssClass">
                                        @Model.StatoDescrizione
                                    </span>
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h6 class="text-uppercase text-muted mb-3">
                                <i class="fas fa-calendar me-1"></i>Date e Attivazioni
                            </h6>

                            @if (Model.DataAttivazione.HasValue)
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Data Attivazione:</label>
                                    <p class="mb-0">
                                        <i class="fas fa-calendar-plus text-success me-1"></i>
                                        @Model.DataAttivazione.Value.ToString("dd/MM/yyyy HH:mm")
                                    </p>
                                </div>
                            }

                            @if (Model.DataModifica.HasValue)
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Ultima Modifica:</label>
                                    <p class="mb-0">
                                        <i class="fas fa-edit text-primary me-1"></i>
                                        @Model.DataModifica.Value.ToString("dd/MM/yyyy HH:mm")
                                    </p>
                                </div>
                            }

                            @if (Model.DataCessazione.HasValue)
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Data Cessazione:</label>
                                    <p class="mb-0">
                                        <i class="fas fa-calendar-times text-danger me-1"></i>
                                        @Model.DataCessazione.Value.ToString("dd/MM/yyyy HH:mm")
                                    </p>
                                </div>
                            }

                            @if (Model.DataRiattivazione.HasValue)
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Data Riattivazione:</label>
                                    <p class="mb-0">
                                        <i class="fas fa-calendar-check text-warning me-1"></i>
                                        @Model.DataRiattivazione.Value.ToString("dd/MM/yyyy HH:mm")
                                    </p>
                                </div>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.AnnoFiscaleDescrizione))
                    {
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <h6 class="text-uppercase text-muted mb-3">
                                    <i class="fas fa-calendar-alt me-1"></i>Anno Fiscale di Riattivazione
                                </h6>
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Questo regime contabile Ã¨ stato riattivato per l'anno fiscale: 
                                    <strong>@Model.AnnoFiscaleDescrizione</strong>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Torna alla Lista
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.IdRegimeContabile" class="btn btn-primary">
                                <i class="fas fa-edit me-1"></i>Modifica
                            </a>
                            @if (Model.Attivo)
                            {
                                <form asp-action="ToggleStatus" asp-route-id="@Model.IdRegimeContabile" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-warning" 
                                            onclick="return confirm('Vuoi davvero cessare questo regime contabile?')">
                                        <i class="fas fa-pause me-1"></i>Cessa
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="ToggleStatus" asp-route-id="@Model.IdRegimeContabile" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success" 
                                            onclick="return confirm('Vuoi davvero riattivare questo regime contabile?')">
                                        <i class="fas fa-play me-1"></i>Riattiva
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-lg {
    width: 80px;
    height: 80px;
}
</style>






