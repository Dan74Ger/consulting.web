@model ConsultingGroup.Models.Mail

@{
    ViewData["Title"] = "Elimina Account Mail - GESTIONE STUDIO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <partial name="_Breadcrumb" model="@(new Dictionary<string, string> {
        {"Home", Url.Action("Index", "Home") ?? ""},
        {"Dati Riservati", Url.Action("Index", "DatiUtenza") ?? ""},
        {"Account Mail", Url.Action("Mail", "DatiUtenza") ?? ""},
        {"Elimina Account", ""}
    })" />

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-danger">
                        <i class="fas fa-trash"></i> Conferma Eliminazione Account Mail
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-triangle"></i> Attenzione!
                        </h4>
                        <p>Sei sicuro di voler eliminare definitivamente questo account mail?</p>
                        <p class="mb-0"><strong>Questa operazione non può essere annullata.</strong></p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-danger">Dettagli Account da Eliminare:</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Indirizzo Mail:</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-envelope"></i>
                                    @Html.DisplayFor(model => model.IndirizzoMail)
                                </dd>

                                <dt class="col-sm-4">Nome Utente:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.NomeUtente)</dd>

                                <dt class="col-sm-4">Password:</dt>
                                <dd class="col-sm-8">
                                    <span class="password-field" data-password="@Model.Password">
                                        ********
                                        <button type="button" class="btn btn-sm btn-outline-secondary ml-2" onclick="togglePassword(this)">
                                            <i class="fas fa-eye"></i> Mostra
                                        </button>
                                    </span>
                                </dd>

                                @if (!string.IsNullOrEmpty(Model.Note))
                                {
                                    <dt class="col-sm-4">Note:</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Note)</dd>
                                }

                                <dt class="col-sm-4">Creato il:</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Aggiornato il:</dt>
                                <dd class="col-sm-8">@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    <hr />

                    <form asp-action="DeleteMail" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Sì, Elimina Definitivamente
                            </button>
                            <a class="btn btn-secondary ml-2" asp-action="Mail">
                                <i class="fas fa-times"></i> Annulla
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function togglePassword(button) {
        const passwordField = button.closest('.password-field');
        const passwordData = passwordField.getAttribute('data-password');
        const isHidden = passwordField.textContent.trim().startsWith('*');
        
        if (isHidden) {
            passwordField.innerHTML = `
                ${passwordData}
                <button type="button" class="btn btn-sm btn-outline-secondary ml-2" onclick="togglePassword(this)">
                    <i class="fas fa-eye-slash"></i> Nascondi
                </button>
            `;
        } else {
            passwordField.innerHTML = `
                ********
                <button type="button" class="btn btn-sm btn-outline-secondary ml-2" onclick="togglePassword(this)">
                    <i class="fas fa-eye"></i> Mostra
                </button>
            `;
        }
    }

    $(document).ready(function() {
        $('form').on('submit', function(e) {
            if (!confirm('Sei sicuro di voler eliminare definitivamente questo account mail? Questa operazione non può essere annullata.')) {
                e.preventDefault();
                return false;
            }
        });
    });
</script>
