@model ConsultingGroup.ViewModels.DatiUtenzaViewModel
@{
    ViewData["Title"] = "Dati Utenza - Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-shield-alt me-2"></i>
                    Dati Utenza Riservati
                </h1>
                <div class="text-muted">
                    <small>
                        <i class="fas fa-user me-1"></i>
                        @Model.FullName (@Model.UserName)
                    </small>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistiche Dashboard -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Totale Records
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotaleRecords</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-database fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Sezioni Attive
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @{
                                    int sezioniAttive = 0;
                                    if (Model.TotaleBanche > 0) sezioniAttive++;
                                    if (Model.TotaleCarteCredito > 0) sezioniAttive++;
                                    if (Model.TotaleUtenze > 0) sezioniAttive++;
                                    if (Model.TotaleMail > 0) sezioniAttive++;
                                }
                                @sezioniAttive / 4
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-folder-open fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Account Mail
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotaleMail</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-envelope fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Dati Finanziari
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(Model.TotaleBanche + Model.TotaleCarteCredito)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-credit-card fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sezioni Dati Utenza -->
    <div class="row">
        <!-- Banche -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-university me-2"></i>
                        Banche (@Model.TotaleBanche)
                    </h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow">
                            <a class="dropdown-item" href="@Url.Action("Banche", "DatiUtenza")">
                                <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                                Visualizza Tutto
                            </a>
                            <a class="dropdown-item" href="@Url.Action("CreateBanca", "DatiUtenza")">
                                <i class="fas fa-plus fa-sm fa-fw mr-2 text-gray-400"></i>
                                Aggiungi Nuovo
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.TotaleBanche > 0)
                    {
                        @foreach (var banca in Model.Banche.Take(3))
                        {
                            <div class="d-flex align-items-center border-bottom py-2">
                                <div class="me-3">
                                    <i class="fas fa-university text-primary"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="small font-weight-bold text-primary">@banca.NomeBanca</div>
                                    <div class="small text-muted">****@(banca.IBAN.Length > 4 ? banca.IBAN.Substring(banca.IBAN.Length - 4) : banca.IBAN)</div>
                                    <div class="small text-muted">@banca.CodiceUtente</div>
                                </div>
                                <div>
                                    <a href="@Url.Action("EditBanca", "DatiUtenza", new { id = banca.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </div>
                        }
                        @if (Model.TotaleBanche > 3)
                        {
                            <div class="text-center mt-3">
                                <a href="@Url.Action("Banche", "DatiUtenza")" class="btn btn-sm btn-link">
                                    Visualizza tutti (@Model.TotaleBanche)
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-university fa-3x text-gray-300 mb-3"></i>
                            <p class="text-muted">Nessuna banca configurata</p>
                            <a href="@Url.Action("CreateBanca", "DatiUtenza")" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus me-1"></i>
                                Aggiungi Prima Banca
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Carte di Credito -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-credit-card me-2"></i>
                        Carte di Credito (@Model.TotaleCarteCredito)
                    </h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow">
                            <a class="dropdown-item" href="@Url.Action("CarteCredito", "DatiUtenza")">
                                <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                                Visualizza Tutto
                            </a>
                            <a class="dropdown-item" href="@Url.Action("CreateCarta", "DatiUtenza")">
                                <i class="fas fa-plus fa-sm fa-fw mr-2 text-gray-400"></i>
                                Aggiungi Nuovo
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.TotaleCarteCredito > 0)
                    {
                        @foreach (var carta in Model.CarteCredito.Take(3))
                        {
                            <div class="d-flex align-items-center border-bottom py-2">
                                <div class="me-3">
                                    <i class="fas fa-credit-card text-success"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="small font-weight-bold">****@(carta.NumeroCarta.Length > 4 ? carta.NumeroCarta.Substring(carta.NumeroCarta.Length - 4) : carta.NumeroCarta)</div>
                                    <div class="small text-muted">@carta.Intestazione</div>
                                    <div class="small text-muted">Scad: @carta.MeseScadenza/@carta.AnnoScadenza</div>
                                </div>
                                <div>
                                    <a href="@Url.Action("EditCarta", "DatiUtenza", new { id = carta.Id })" class="btn btn-sm btn-outline-success">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </div>
                        }
                        @if (Model.TotaleCarteCredito > 3)
                        {
                            <div class="text-center mt-3">
                                <a href="@Url.Action("CarteCredito", "DatiUtenza")" class="btn btn-sm btn-link">
                                    Visualizza tutte (@Model.TotaleCarteCredito)
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-credit-card fa-3x text-gray-300 mb-3"></i>
                            <p class="text-muted">Nessuna carta configurata</p>
                            <a href="@Url.Action("CreateCarta", "DatiUtenza")" class="btn btn-success btn-sm">
                                <i class="fas fa-plus me-1"></i>
                                Aggiungi Prima Carta
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Utenze -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-bolt me-2"></i>
                        Utenze (@Model.TotaleUtenze)
                    </h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow">
                            <a class="dropdown-item" href="@Url.Action("Utenze", "DatiUtenza")">
                                <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                                Visualizza Tutto
                            </a>
                            <a class="dropdown-item" href="@Url.Action("CreateUtenza", "DatiUtenza")">
                                <i class="fas fa-plus fa-sm fa-fw mr-2 text-gray-400"></i>
                                Aggiungi Nuovo
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.TotaleUtenze > 0)
                    {
                        @foreach (var utenza in Model.Utenze.Take(3))
                        {
                            <div class="d-flex align-items-center border-bottom py-2">
                                <div class="me-3">
                                    <i class="fas fa-bolt text-info"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="small font-weight-bold">@utenza.DenominazioneUtenza</div>
                                    <div class="small text-muted">@utenza.NomeUtente</div>
                                </div>
                                <div>
                                    <a href="@Url.Action("EditUtenza", "DatiUtenza", new { id = utenza.Id })" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </div>
                        }
                        @if (Model.TotaleUtenze > 3)
                        {
                            <div class="text-center mt-3">
                                <a href="@Url.Action("Utenze", "DatiUtenza")" class="btn btn-sm btn-link">
                                    Visualizza tutte (@Model.TotaleUtenze)
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-bolt fa-3x text-gray-300 mb-3"></i>
                            <p class="text-muted">Nessuna utenza configurata</p>
                            <a href="@Url.Action("CreateUtenza", "DatiUtenza")" class="btn btn-info btn-sm">
                                <i class="fas fa-plus me-1"></i>
                                Aggiungi Prima Utenza
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Mail -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-warning">
                        <i class="fas fa-envelope me-2"></i>
                        Account Mail (@Model.TotaleMail)
                    </h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow">
                            <a class="dropdown-item" href="@Url.Action("Mail", "DatiUtenza")">
                                <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                                Visualizza Tutto
                            </a>
                            <a class="dropdown-item" href="@Url.Action("CreateMail", "DatiUtenza")">
                                <i class="fas fa-plus fa-sm fa-fw mr-2 text-gray-400"></i>
                                Aggiungi Nuovo
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.TotaleMail > 0)
                    {
                        @foreach (var mail in Model.Mail.Take(3))
                        {
                            <div class="d-flex align-items-center border-bottom py-2">
                                <div class="me-3">
                                    <i class="fas fa-envelope text-warning"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="small font-weight-bold">@mail.IndirizzoMail</div>
                                    <div class="small text-muted">@mail.NomeUtente</div>
                                </div>
                                <div>
                                    <a href="@Url.Action("EditMail", "DatiUtenza", new { id = mail.Id })" class="btn btn-sm btn-outline-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </div>
                        }
                        @if (Model.TotaleMail > 3)
                        {
                            <div class="text-center mt-3">
                                <a href="@Url.Action("Mail", "DatiUtenza")" class="btn btn-sm btn-link">
                                    Visualizza tutti (@Model.TotaleMail)
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-envelope fa-3x text-gray-300 mb-3"></i>
                            <p class="text-muted">Nessun account mail configurato</p>
                            <a href="@Url.Action("CreateMail", "DatiUtenza")" class="btn btn-warning btn-sm">
                                <i class="fas fa-plus me-1"></i>
                                Aggiungi Primo Account
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Azioni Rapide Dati Riservati -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-danger">
                        <i class="fas fa-lock me-2"></i>
                        Azioni Rapide - Dati Riservati
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("CreateBanca", "DatiUtenza")" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-plus me-1"></i>
                                Aggiungi Banca
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("CreateCarta", "DatiUtenza")" class="btn btn-outline-success btn-block">
                                <i class="fas fa-plus me-1"></i>
                                Aggiungi Carta
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("CreateMail", "DatiUtenza")" class="btn btn-outline-warning btn-block">
                                <i class="fas fa-plus me-1"></i>
                                Aggiungi Mail
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("CreateUtenza", "DatiUtenza")" class="btn btn-outline-info btn-block">
                                <i class="fas fa-plus me-1"></i>
                                Aggiungi Utenza
                            </a>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <a href="@Url.Action("Index", "DatiUtenzaExtra")" class="btn btn-outline-info btn-lg">
                                <i class="fas fa-folder-open me-2"></i>
                                <strong>Vai a Dati Generali</strong>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
}
.border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
}
.border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
}
.border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
}
</style>