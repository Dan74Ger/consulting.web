@model List<ConsultingGroup.Models.Banche>
@{
    ViewData["Title"] = "Gestione Banche";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-university me-2"></i>
            Gestione Banche
        </h1>
        <a href="@Url.Action("CreateBanca")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>
            Aggiungi Nuova Banca
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    Elenco Banche (@Model.Count)
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nome Banca</th>
                                <th>IBAN</th>
                                <th>Codice Utente</th>
                                <th>Password</th>
                                <th>Indirizzo</th>
                                <th>Note</th>
                                <th>Data Creazione</th>
                                <th width="150px">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var banca in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="font-weight-bold text-primary">@banca.NomeBanca</span>
                                    </td>
                                    <td>
                                        <span class="font-weight-bold">
                                            ****@(banca.IBAN.Length > 4 ? banca.IBAN.Substring(banca.IBAN.Length - 4) : banca.IBAN)
                                        </span>
                                        <br>
                                        <small class="text-muted">@banca.IBAN</small>
                                    </td>
                                    <td>@banca.CodiceUtente</td>
                                    <td>
                                        <span class="text-danger font-monospace">@banca.Password</span>
                                    </td>
                                    <td>@(string.IsNullOrEmpty(banca.Indirizzo) ? "-" : banca.Indirizzo)</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(banca.Note))
                                        {
                                            <span data-bs-toggle="tooltip" title="@banca.Note">
                                                @(banca.Note.Length > 50 ? banca.Note.Substring(0, 50) + "..." : banca.Note)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@banca.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("EditBanca", new { id = banca.Id })" class="btn btn-outline-primary" title="Modifica">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("DeleteBanca", new { id = banca.Id })" 
                                               class="btn btn-outline-danger" 
                                               title="Elimina"
                                               onclick="return confirm('Sei sicuro di voler eliminare questa banca?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-university fa-3x text-gray-300 mb-4"></i>
                <h4 class="text-gray-500">Nessuna banca configurata</h4>
                <p class="text-gray-400 mb-4">Non hai ancora aggiunto nessuna banca al sistema.</p>
                <a href="@Url.Action("CreateBanca")" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>
                    Aggiungi Prima Banca
                </a>
            </div>
        </div>
    }
</div>

