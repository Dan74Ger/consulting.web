@model List<ConsultingGroup.Models.CarteCredito>
@{
    ViewData["Title"] = "Gestione Carte di Credito";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-credit-card me-2"></i>
            Gestione Carte di Credito
        </h1>
        <a href="@Url.Action("CreateCarta")" class="btn btn-success btn-sm">
            <i class="fas fa-plus me-1"></i>
            Aggiungi Nuova Carta
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-success">
                    Elenco Carte di Credito (@Model.Count)
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Numero Carta</th>
                                <th>Intestazione</th>
                                <th>Scadenza</th>
                                <th>PIN</th>
                                <th>Note</th>
                                <th>Data Creazione</th>
                                <th width="150px">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var carta in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="font-weight-bold text-success">
                                            ****@(carta.NumeroCarta.Length > 4 ? carta.NumeroCarta.Substring(carta.NumeroCarta.Length - 4) : carta.NumeroCarta)
                                        </span>
                                        <br>
                                        <small class="text-muted">@carta.NumeroCarta</small>
                                    </td>
                                    <td>@carta.Intestazione</td>
                                    <td>
                                        <span class="badge bg-info">
                                            @carta.MeseScadenza.ToString("00")/@carta.AnnoScadenza
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-danger font-monospace">@carta.PIN</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(carta.Note))
                                        {
                                            <span data-bs-toggle="tooltip" title="@carta.Note">
                                                @(carta.Note.Length > 50 ? carta.Note.Substring(0, 50) + "..." : carta.Note)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@carta.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("EditCarta", new { id = carta.Id })" class="btn btn-outline-success" title="Modifica">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("DeleteCarta", new { id = carta.Id })" 
                                               class="btn btn-outline-danger" 
                                               title="Elimina"
                                               onclick="return confirm('Sei sicuro di voler eliminare questa carta?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-credit-card fa-3x text-gray-300 mb-4"></i>
                <h4 class="text-gray-500">Nessuna carta configurata</h4>
                <p class="text-gray-400 mb-4">Non hai ancora aggiunto nessuna carta di credito al sistema.</p>
                <a href="@Url.Action("CreateCarta")" class="btn btn-success">
                    <i class="fas fa-plus me-1"></i>
                    Aggiungi Prima Carta
                </a>
            </div>
        </div>
    }
</div>

