@model List<ConsultingGroup.Models.Mail>
@{
    ViewData["Title"] = "Gestione Account Mail";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-envelope me-2"></i>
            Gestione Account Mail
        </h1>
        <a href="@Url.Action("CreateMail")" class="btn btn-warning btn-sm">
            <i class="fas fa-plus me-1"></i>
            Aggiungi Nuovo Account
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-warning">
                    Elenco Account Mail (@Model.Count)
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Indirizzo Mail</th>
                                <th>Nome Utente</th>
                                <th>Password</th>
                                <th>Note</th>
                                <th>Data Creazione</th>
                                <th width="150px">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mail in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="font-weight-bold text-warning">
                                            <i class="fas fa-envelope me-1"></i>
                                            @mail.IndirizzoMail
                                        </span>
                                    </td>
                                    <td>@mail.NomeUtente</td>
                                    <td>
                                        <span class="text-danger font-monospace">@mail.Password</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(mail.Note))
                                        {
                                            <span data-bs-toggle="tooltip" title="@mail.Note">
                                                @(mail.Note.Length > 50 ? mail.Note.Substring(0, 50) + "..." : mail.Note)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@mail.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("EditMail", new { id = mail.Id })" class="btn btn-outline-warning" title="Modifica">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("DeleteMail", new { id = mail.Id })" 
                                               class="btn btn-outline-danger" 
                                               title="Elimina"
                                               onclick="return confirm('Sei sicuro di voler eliminare questo account mail?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-envelope fa-3x text-gray-300 mb-4"></i>
                <h4 class="text-gray-500">Nessun account mail configurato</h4>
                <p class="text-gray-400 mb-4">Non hai ancora aggiunto nessun account mail al sistema.</p>
                <a href="@Url.Action("CreateMail")" class="btn btn-warning">
                    <i class="fas fa-plus me-1"></i>
                    Aggiungi Primo Account
                </a>
            </div>
        </div>
    }
</div>