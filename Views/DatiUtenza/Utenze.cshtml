@model List<ConsultingGroup.Models.Utenze>
@{
    ViewData["Title"] = "Gestione Utenze";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-bolt me-2"></i>
            Gestione Utenze
        </h1>
        <a href="@Url.Action("CreateUtenza")" class="btn btn-info btn-sm">
            <i class="fas fa-plus me-1"></i>
            Aggiungi Nuova Utenza
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-info">
                    Elenco Utenze (@Model.Count)
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Denominazione Utenza</th>
                                <th>Sito Web</th>
                                <th>Nome Utente</th>
                                <th>Password</th>
                                <th>Note</th>
                                <th>Data Creazione</th>
                                <th width="150px">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var utenza in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="font-weight-bold text-info">@utenza.DenominazioneUtenza</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(utenza.SitoWeb))
                                        {
                                            <a href="@utenza.SitoWeb" target="_blank" class="text-decoration-none">
                                                @utenza.SitoWeb
                                                <i class="fas fa-external-link-alt ms-1"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@utenza.NomeUtente</td>
                                    <td>
                                        <span class="text-danger font-monospace">@utenza.Password</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(utenza.Note))
                                        {
                                            <span data-bs-toggle="tooltip" title="@utenza.Note">
                                                @(utenza.Note.Length > 50 ? utenza.Note.Substring(0, 50) + "..." : utenza.Note)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@utenza.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("EditUtenza", new { id = utenza.Id })" class="btn btn-outline-info" title="Modifica">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("DeleteUtenza", new { id = utenza.Id })" 
                                               class="btn btn-outline-danger" 
                                               title="Elimina"
                                               onclick="return confirm('Sei sicuro di voler eliminare questa utenza?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-bolt fa-3x text-gray-300 mb-4"></i>
                <h4 class="text-gray-500">Nessuna utenza configurata</h4>
                <p class="text-gray-400 mb-4">Non hai ancora aggiunto nessuna utenza al sistema.</p>
                <a href="@Url.Action("CreateUtenza")" class="btn btn-info">
                    <i class="fas fa-plus me-1"></i>
                    Aggiungi Prima Utenza
                </a>
            </div>
        </div>
    }
</div>