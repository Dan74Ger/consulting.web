@model ConsultingGroup.Models.AnnoFatturazione

@{
    ViewData["Title"] = "Elimina Anno Fatturazione";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-trash text-danger me-2"></i>Elimina Anno Fatturazione</h2>
                    <p class="text-muted mb-0">Conferma l'eliminazione dell'anno: <strong>@Model.Anno</strong></p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Torna all'Elenco
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Conferma Eliminazione
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5><i class="fas fa-exclamation-triangle me-2"></i>Attenzione!</h5>
                        <p class="mb-0">Stai per eliminare definitivamente l'anno fatturazione <strong>@Model.Anno</strong>. 
                        Questa operazione non può essere annullata.</p>
                    </div>

                    <!-- Informazioni anno da eliminare -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-calendar me-1"></i>Anno
                            </h6>
                            <p class="fs-5 fw-bold">@Model.Anno</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-info-circle me-1"></i>Stato
                            </h6>
                            @if (Model.Attivo)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i>Attivo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-times me-1"></i>Non Attivo
                                </span>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Descrizione))
                    {
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-muted mb-2">
                                    <i class="fas fa-edit me-1"></i>Descrizione
                                </h6>
                                <p>@Model.Descrizione</p>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Note))
                    {
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-muted mb-2">
                                    <i class="fas fa-sticky-note me-1"></i>Note
                                </h6>
                                <div class="border rounded p-3 bg-light">
                                    <p class="mb-0">@Model.Note</p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-calendar-plus me-1"></i>Creato il
                            </h6>
                            <p class="mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-calendar-check me-1"></i>Ultima modifica
                            </h6>
                            <p class="mb-0">@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>

                    @if (Model.AnnoCorrente)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-star me-2"></i>
                            <strong>Anno Corrente:</strong> Non è possibile eliminare l'anno corrente di fatturazione. 
                            Imposta prima un altro anno come corrente.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Impatto:</strong> L'eliminazione di questo anno non influenzerà i mandati già configurati nei clienti, 
                            ma l'anno non sarà più disponibile per nuove selezioni.
                        </div>
                    }
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>Annulla
                        </a>
                        @if (Model.AnnoCorrente)
                        {
                            <button type="button" class="btn btn-outline-danger" disabled>
                                <i class="fas fa-ban me-1"></i>Impossibile Eliminare (Anno Corrente)
                            </button>
                        }
                        else
                        {
                            <form asp-action="Delete" method="post" style="display: inline;">
                                <input type="hidden" asp-for="IdAnnoFatturazione" />
                                <button type="submit" class="btn btn-danger" 
                                        onclick="return confirm('Sei SICURO di voler eliminare definitivamente l\'anno @Model.Anno? Questa operazione NON può essere annullata.')">
                                    <i class="fas fa-trash me-1"></i>Elimina Definitivamente
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card.border-danger {
        border-color: #dc3545 !important;
    }
    
    .card-footer {
        background-color: #f8f9fa !important;
        border-top: 1px solid #dee2e6;
    }
    
    .alert-danger {
        border-left: 4px solid #dc3545;
    }
    
    .alert-warning {
        border-left: 4px solid #ffc107;
    }
    
    .alert-info {
        border-left: 4px solid #0dcaf0;
    }
</style>
