@{
    ViewData["Title"] = "Visualizzazione Dati";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Visualizzazione Dati</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-eye me-2"></i>
                        Visualizzazione Dati Base
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        @ViewBag.Message
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">Dati Accessibili</h6>
                                </div>
                                <div class="card-body">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            Statistiche Base
                                            <span class="badge bg-success rounded-pill">Disponibile</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            Reports Personali
                                            <span class="badge bg-success rounded-pill">Disponibile</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            Cronologia Attivit√†
                                            <span class="badge bg-success rounded-pill">Disponibile</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            Dati Amministrativi
                                            <span class="badge bg-danger rounded-pill">Limitato</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">Statistiche Esempio</h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Metrica</th>
                                                    <th>Valore</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>Accessi Totali</td>
                                                    <td><span class="badge bg-primary">145</span></td>
                                                </tr>
                                                <tr>
                                                    <td>Ultimo Accesso</td>
                                                    <td>Oggi, 08:30</td>
                                                </tr>
                                                <tr>
                                                    <td>Operazioni Eseguite</td>
                                                    <td><span class="badge bg-info">23</span></td>
                                                </tr>
                                                <tr>
                                                    <td>Stato Account</td>
                                                    <td><span class="badge bg-success">Attivo</span></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>