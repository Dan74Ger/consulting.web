@model ConsultingGroup.Models.UtentiPC
@{
    ViewData["Title"] = "Elimina Utente PC";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-desktop me-2 text-danger"></i>
            Elimina Utente PC
        </h1>
        <a href="@Url.Action("UtentiPC")" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i>
            Torna all'Elenco
        </a>
    </div>

    <div class="card shadow border-left-danger">
        <div class="card-header py-3 bg-danger">
            <h6 class="m-0 font-weight-bold text-white">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Conferma Eliminazione
            </h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5><i class="fas fa-exclamation-triangle me-2"></i>Attenzione!</h5>
                Sei sicuro di voler eliminare definitivamente questo utente PC? 
                <strong>Questa operazione non pu√≤ essere annullata.</strong>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <td class="font-weight-bold">Nome PC:</td>
                            <td>@Model.NomePC</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Utente:</td>
                            <td>@Model.Utente</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Password:</td>
                            <td><span class="text-primary">@Model.Password</span></td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Indirizzo Rete:</td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.IndirizzoRete))
                                {
                                    <code>@Model.IndirizzoRete</code>
                                }
                                else
                                {
                                    <span class="text-muted">Non specificato</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <td class="font-weight-bold">Note:</td>
                            <td>@(string.IsNullOrEmpty(Model.Note) ? "Nessuna nota" : Model.Note)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Creato il:</td>
                            <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Ultima modifica:</td>
                            <td>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    </table>
                </div>
            </div>

            <hr />

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("UtentiPC")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Annulla
                </a>
                <form asp-action="DeleteUtentiPC" method="post" class="d-inline">
                    <input asp-for="Id" type="hidden" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>
                        Conferma Eliminazione
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>