@model List<ConsultingGroup.Models.UtentiPC>
@{
    ViewData["Title"] = "Gestione Utenti PC";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-desktop me-2"></i>
            Gestione Utenti PC
        </h1>
        <a href="@Url.Action("CreateUtentiPC")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>
            Aggiungi Nuovo Utente PC
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    Elenco Utenti PC (@Model.Count)
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nome PC</th>
                                <th>Utente</th>
                                <th>Password</th>
                                <th>Indirizzo Rete</th>
                                <th>Note</th>
                                <th>Inserito da</th>
                                <th>Data Creazione</th>
                                <th width="150px">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var utentePC in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="mr-3">
                                                <i class="fas fa-desktop text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="font-weight-bold text-gray-900">@utentePC.NomePC</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="font-weight-bold">@utentePC.Utente</span>
                                    </td>
                                    <td>
                                        <span class="text-primary font-weight-bold">@utentePC.Password</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(utentePC.IndirizzoRete))
                                        {
                                            <code>@utentePC.IndirizzoRete</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(utentePC.Note))
                                        {
                                            <span data-bs-toggle="tooltip" title="@utentePC.Note">
                                                @(utentePC.Note.Length > 50 ? utentePC.Note.Substring(0, 50) + "..." : utentePC.Note)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">
                                            <i class="fas fa-user me-1"></i>
                                            @(utentePC.User?.FullName ?? "Sconosciuto")
                                        </span>
                                    </td>
                                    <td>@utentePC.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("EditUtentiPC", new { id = utentePC.Id })" class="btn btn-outline-primary" title="Modifica">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("DeleteUtentiPC", new { id = utentePC.Id })" 
                                               class="btn btn-outline-danger" 
                                               title="Elimina"
                                               onclick="return confirm('Sei sicuro di voler eliminare questo utente PC?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-desktop fa-3x text-gray-300 mb-4"></i>
                <h4 class="text-gray-500">Nessun utente PC configurato</h4>
                <p class="text-gray-400 mb-4">Non hai ancora aggiunto nessun utente PC al sistema.</p>
                <a href="@Url.Action("CreateUtentiPC")" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>
                    Aggiungi Primo Utente PC
                </a>
            </div>
        </div>
    }
</div>