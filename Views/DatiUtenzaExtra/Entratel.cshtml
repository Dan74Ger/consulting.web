@model List<ConsultingGroup.Models.Entratel>
@{
    ViewData["Title"] = "Gestione ENTRATEL";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-landmark me-2"></i>
            Gestione ENTRATEL
        </h1>
        <a href="@Url.Action("CreateEntratel")" class="btn btn-secondary btn-sm">
            <i class="fas fa-plus me-1"></i>
            Aggiungi Nuovo Accesso
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-secondary">
                    Elenco Accessi ENTRATEL (@Model.Count)
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Sito</th>
                                <th>Utente</th>
                                <th>Password</th>
                                <th>PIN Catastali</th>
                                <th>PIN Cassetto</th>
                                <th>PIN Completo</th>
                                <th>Desktop Telematico</th>
                                <th>Inserito da</th>
                                <th>Data</th>
                                <th width="120px">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entratel in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(entratel.Sito))
                                        {
                                            <a href="@entratel.Sito" target="_blank" class="text-decoration-none">
                                                <i class="fas fa-landmark text-secondary me-1"></i>
                                                @entratel.Sito <i class="fas fa-external-link-alt fa-xs"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="font-weight-bold">@entratel.Utente</span>
                                    </td>
                                    <td>
                                        <span class="text-primary font-weight-bold">@entratel.Password</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(entratel.PinDatiCatastali))
                                        {
                                            <code>@entratel.PinDatiCatastali</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(entratel.PinDelegheCassettoFiscale))
                                        {
                                            <code>@entratel.PinDelegheCassettoFiscale</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(entratel.PinCompleto))
                                        {
                                            <code>@entratel.PinCompleto</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(entratel.DesktopTelematicoUtente))
                                        {
                                            <small>
                                                <strong>@entratel.DesktopTelematicoUtente</strong><br/>
                                                <span class="text-primary">@entratel.DesktopTelematicoPassword</span>
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-user me-1"></i>
                                            @(entratel.User?.FullName ?? "Sconosciuto")
                                        </span>
                                    </td>
                                    <td>@entratel.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("EditEntratel", new { id = entratel.Id })" class="btn btn-outline-secondary" title="Modifica">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("DeleteEntratel", new { id = entratel.Id })" 
                                               class="btn btn-outline-danger" 
                                               title="Elimina"
                                               onclick="return confirm('Sei sicuro di voler eliminare questo accesso ENTRATEL?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-landmark fa-3x text-gray-300 mb-4"></i>
                <h4 class="text-gray-500">Nessun accesso ENTRATEL configurato</h4>
                <p class="text-gray-400 mb-4">Non hai ancora aggiunto nessun accesso ENTRATEL al sistema.</p>
                <a href="@Url.Action("CreateEntratel")" class="btn btn-secondary">
                    <i class="fas fa-plus me-1"></i>
                    Aggiungi Primo Accesso
                </a>
            </div>
        </div>
    }
</div>