@model List<ConsultingGroup.Models.Cancelleria>
@{
    ViewData["Title"] = "Gestione Cancelleria";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-store me-2"></i>
            Gestione Cancelleria
        </h1>
        <a href="@Url.Action("CreateCancelleria")" class="btn btn-secondary btn-sm">
            <i class="fas fa-plus me-1"></i>
            Aggiungi Nuovo Fornitore
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-secondary">
                    Elenco Fornitori Cancelleria (@Model.Count)
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Denominazione Fornitore</th>
                                <th>Sito Web</th>
                                <th>Nome Utente</th>
                                <th>Password</th>
                                <th>Note</th>
                                <th>Inserito da</th>
                                <th>Data Creazione</th>
                                <th width="150px">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cancelleria in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="font-weight-bold text-secondary">
                                            <i class="fas fa-store me-1"></i>
                                            @cancelleria.DenominazioneFornitore
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(cancelleria.SitoWeb))
                                        {
                                            <a href="@cancelleria.SitoWeb" target="_blank" class="text-decoration-none">
                                                @cancelleria.SitoWeb
                                                <i class="fas fa-external-link-alt ms-1"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@cancelleria.NomeUtente</td>
                                    <td>
                                        <span class="text-danger font-monospace">@cancelleria.Password</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(cancelleria.Note))
                                        {
                                            <span data-bs-toggle="tooltip" title="@cancelleria.Note">
                                                @(cancelleria.Note.Length > 50 ? cancelleria.Note.Substring(0, 50) + "..." : cancelleria.Note)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            <i class="fas fa-user me-1"></i>
                                            @(cancelleria.User?.FullName ?? "Sconosciuto")
                                        </span>
                                    </td>
                                    <td>@cancelleria.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("EditCancelleria", new { id = cancelleria.Id })" class="btn btn-outline-secondary" title="Modifica">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("DeleteCancelleria", new { id = cancelleria.Id })" 
                                               class="btn btn-outline-danger" 
                                               title="Elimina"
                                               onclick="return confirm('Sei sicuro di voler eliminare questo fornitore?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-store fa-3x text-gray-300 mb-4"></i>
                <h4 class="text-gray-500">Nessun fornitore configurato</h4>
                <p class="text-gray-400 mb-4">Non hai ancora aggiunto nessun fornitore di cancelleria al sistema.</p>
                <a href="@Url.Action("CreateCancelleria")" class="btn btn-secondary">
                    <i class="fas fa-plus me-1"></i>
                    Aggiungi Primo Fornitore
                </a>
            </div>
        </div>
    }
</div>