@model List<ConsultingGroup.Models.AltriDati>
@{
    ViewData["Title"] = "Gestione Altri Dati";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-folder me-2"></i>
            Gestione Altri Dati
        </h1>
        <a href="@Url.Action("CreateAltriDati")" class="btn btn-success btn-sm">
            <i class="fas fa-plus me-1"></i>
            Aggiungi Nuovo Dato
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-success">
                    Elenco Altri Dati (@Model.Count)
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Sito Web</th>
                                <th>Utente</th>
                                <th>Password</th>
                                <th>Note</th>
                                <th>Inserito da</th>
                                <th>Data Creazione</th>
                                <th width="150px">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var altriDati in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="mr-3">
                                                <i class="fas fa-folder text-success"></i>
                                            </div>
                                            <div>
                                                <div class="font-weight-bold text-gray-900">@altriDati.Nome</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(altriDati.SitoWeb))
                                        {
                                            <a href="@altriDati.SitoWeb" target="_blank" class="text-decoration-none">
                                                @altriDati.SitoWeb <i class="fas fa-external-link-alt fa-xs"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="font-weight-bold">@altriDati.Utente</span>
                                    </td>
                                    <td>
                                        <span class="text-primary font-weight-bold">@altriDati.Password</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(altriDati.Note))
                                        {
                                            <span data-bs-toggle="tooltip" title="@altriDati.Note">
                                                @(altriDati.Note.Length > 50 ? altriDati.Note.Substring(0, 50) + "..." : altriDati.Note)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-success">
                                            <i class="fas fa-user me-1"></i>
                                            @(altriDati.User?.FullName ?? "Sconosciuto")
                                        </span>
                                    </td>
                                    <td>@altriDati.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("EditAltriDati", new { id = altriDati.Id })" class="btn btn-outline-success" title="Modifica">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("DeleteAltriDati", new { id = altriDati.Id })" 
                                               class="btn btn-outline-danger" 
                                               title="Elimina"
                                               onclick="return confirm('Sei sicuro di voler eliminare questo dato?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-folder fa-3x text-gray-300 mb-4"></i>
                <h4 class="text-gray-500">Nessun dato configurato</h4>
                <p class="text-gray-400 mb-4">Non hai ancora aggiunto nessun altro dato al sistema.</p>
                <a href="@Url.Action("CreateAltriDati")" class="btn btn-success">
                    <i class="fas fa-plus me-1"></i>
                    Aggiungi Primo Dato
                </a>
            </div>
        </div>
    }
</div>