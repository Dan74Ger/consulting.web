@model ConsultingGroup.Models.Entratel
@{
    ViewData["Title"] = "Elimina Accesso ENTRATEL";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-landmark me-2 text-danger"></i>
            Elimina Accesso ENTRATEL
        </h1>
        <a href="@Url.Action("Entratel")" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i>
            Torna all'Elenco
        </a>
    </div>

    <div class="card shadow border-left-danger">
        <div class="card-header py-3 bg-danger">
            <h6 class="m-0 font-weight-bold text-white">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Conferma Eliminazione
            </h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5><i class="fas fa-exclamation-triangle me-2"></i>Attenzione!</h5>
                Sei sicuro di voler eliminare definitivamente questo accesso ENTRATEL? 
                <strong>Questa operazione non pu√≤ essere annullata.</strong>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h6 class="font-weight-bold text-secondary mb-3">Credenziali Base</h6>
                    <table class="table table-borderless table-sm">
                        <tr>
                            <td class="font-weight-bold">Sito:</td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.Sito))
                                {
                                    <a href="@Model.Sito" target="_blank">@Model.Sito</a>
                                }
                                else
                                {
                                    <span class="text-muted">Non specificato</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Utente:</td>
                            <td>@Model.Utente</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Password:</td>
                            <td><span class="text-primary">@Model.Password</span></td>
                        </tr>
                    </table>

                    <h6 class="font-weight-bold text-secondary mb-3 mt-4">Codici PIN</h6>
                    <table class="table table-borderless table-sm">
                        <tr>
                            <td class="font-weight-bold">PIN Catastali:</td>
                            <td>@(string.IsNullOrEmpty(Model.PinDatiCatastali) ? "-" : Model.PinDatiCatastali)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">PIN Cassetto:</td>
                            <td>@(string.IsNullOrEmpty(Model.PinDelegheCassettoFiscale) ? "-" : Model.PinDelegheCassettoFiscale)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">PIN Completo:</td>
                            <td>@(string.IsNullOrEmpty(Model.PinCompleto) ? "-" : Model.PinCompleto)</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h6 class="font-weight-bold text-secondary mb-3">Desktop Telematico</h6>
                    <table class="table table-borderless table-sm">
                        <tr>
                            <td class="font-weight-bold">Utente DT:</td>
                            <td>@(string.IsNullOrEmpty(Model.DesktopTelematicoUtente) ? "-" : Model.DesktopTelematicoUtente)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Password DT:</td>
                            <td>@(string.IsNullOrEmpty(Model.DesktopTelematicoPassword) ? "-" : Model.DesktopTelematicoPassword)</td>
                        </tr>
                    </table>

                    <h6 class="font-weight-bold text-secondary mb-3 mt-4">Informazioni</h6>
                    <table class="table table-borderless table-sm">
                        <tr>
                            <td class="font-weight-bold">Note:</td>
                            <td>@(string.IsNullOrEmpty(Model.Note) ? "Nessuna nota" : Model.Note)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Creato il:</td>
                            <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Ultima modifica:</td>
                            <td>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    </table>
                </div>
            </div>

            <hr />

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Entratel")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Annulla
                </a>
                <form asp-action="DeleteEntratel" method="post" class="d-inline">
                    <input asp-for="Id" type="hidden" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>
                        Conferma Eliminazione
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>