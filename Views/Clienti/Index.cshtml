@section Scripts {
    <script>
        // Auto-hide success alerts
        setTimeout(function() {
            $('.alert-success').fadeOut('slow');
        }, 5000);

        // Auto-submit form quando cambia il filtro stato
        document.getElementById('statusFilter').addEventListener('change', function() {
            chiudiFiltriDopoSubmit();
            document.getElementById('filtriForm').submit();
        });



        // Funzione per chiudere i filtri dopo il submit
        function chiudiFiltriDopoSubmit() {
            // Aggiungi un flag per chiudere i filtri dopo il submit
            sessionStorage.setItem('chiudiFiltriDopoCaricamento', 'true');
        }

        // Gestione apertura/chiusura filtri e indicatori
        document.addEventListener('DOMContentLoaded', function() {
            const hasFilters = '@(!string.IsNullOrEmpty(statusFilter) || dichiarazioniFilter.Count > 0)' === 'True';
            const filterHeader = document.querySelector('#filtriPanel .card-header h6');
            const filtriPanel = document.getElementById('filtriPanel');
            
            // Aggiunge indicatore di filtri attivi
            if (hasFilters) {
                const badge = document.createElement('span');
                badge.className = 'badge bg-primary ms-2';
                badge.textContent = 'Filtri attivi';
                filterHeader.appendChild(badge);
                
                // Se ci sono filtri attivi, mostra il pannello brevemente poi lo chiude
                if (sessionStorage.getItem('chiudiFiltriDopoCaricamento') === 'true') {
                    // Rimuovi il flag
                    sessionStorage.removeItem('chiudiFiltriDopoCaricamento');
                    // Mantieni chiuso
                } else {
                    // Se ci sono filtri ma non è un reload dopo submit, apri il pannello
                    var collapse = new bootstrap.Collapse(filtriPanel, { show: true });
                }
            }

            // Gestione dell'icona del pulsante toggle
            const toggleButton = document.querySelector('[data-bs-target="#filtriPanel"]');
            const toggleIcon = toggleButton.querySelector('i');
            
            filtriPanel.addEventListener('show.bs.collapse', function () {
                toggleIcon.className = 'fas fa-chevron-up';
            });
            
            filtriPanel.addEventListener('hide.bs.collapse', function () {
                toggleIcon.className = 'fas fa-chevron-down';
            });
        });

        // Seleziona/Deseleziona tutte le checkbox di una categoria
        function toggleCategoryCheckboxes(categoryName) {
            const checkboxes = document.querySelectorAll(`input[name="dichiarazioni"][value*="${categoryName}"]`);
            const allChecked = Array.from(checkboxes).every(cb => cb.checked);
            checkboxes.forEach(cb => cb.checked = !allChecked);
        }
    </script>
}
