@model dynamic

@{
    ViewData["Title"] = "Statistiche Clienti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-chart-bar me-2 text-primary"></i>Statistiche Clienti</h2>
                    <p class="text-muted mb-0">Panoramica completa dei clienti e delle dichiarazioni</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Torna alla Lista
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiche Generali -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Panoramica Generale</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="stat-item">
                                <h3 class="text-success">@Model.StatisticheGenerali.TotaleClientiAttivi</h3>
                                <p class="text-muted mb-0">Clienti Attivi</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-item">
                                <h3 class="text-warning">@Model.StatisticheGenerali.TotaleClientiCessati</h3>
                                <p class="text-muted mb-0">Clienti Cessati</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-item">
                                <h3 class="text-info">@Model.StatisticheGenerali.TotaleProgrammi</h3>
                                <p class="text-muted mb-0">Programmi Attivi</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-item">
                                <h3 class="text-primary">@Model.StatisticheGenerali.TotaleProfessionisti</h3>
                                <p class="text-muted mb-0">Professionisti Attivi</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Clienti per Studio -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-laptop-code me-2"></i>Clienti per Programma</h5>
                </div>
                <div class="card-body">
                    @if (Model.ClientiPerStudio.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Programma</th>
                                        <th class="text-center">Clienti</th>
                                        <th class="text-center">%</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int totaleClienti = Model.StatisticheGenerali.TotaleClientiAttivi;
                                    }
                                    @foreach (var studio in Model.ClientiPerStudio)
                                    {
                                        var percentuale = totaleClienti > 0 ? (studio.NumeroClienti * 100.0 / totaleClienti) : 0;
                                        <tr>
                                            <td>
                                                <strong>@studio.StudioNome</strong>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info">@studio.NumeroClienti</span>
                                            </td>
                                            <td class="text-center">
                                                <small class="text-muted">@percentuale.ToString("F1")%</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="fas fa-building fa-3x mb-3"></i>
                            <p>Nessun dato disponibile</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Clienti per Professionista -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-user-tie me-2"></i>Clienti per Professionista</h5>
                </div>
                <div class="card-body">
                    @if (Model.ClientiPerProfessionista.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Professionista</th>
                                        <th class="text-center">Tot.</th>
                                        <th class="text-center">RED</th>
                                        <th class="text-center">IVA</th>
                                        <th class="text-center">CON</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var prof in Model.ClientiPerProfessionista)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@prof.ProfessionistaNome</strong>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@prof.NumeroClienti</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-danger">@prof.ClientiRedditi</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-warning text-dark">@prof.ClientiIva</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-success">@prof.ClientiContabile</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                <strong>Legenda:</strong> 
                                <span class="badge bg-danger me-1">RED</span>Redditi
                                <span class="badge bg-warning text-dark me-1">IVA</span>IVA
                                <span class="badge bg-success me-1">CON</span>Contabile
                            </small>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="fas fa-user-tie fa-3x mb-3"></i>
                            <p>Nessun dato disponibile</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Totale Dichiarazioni da Fare -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Totale Dichiarazioni da Fare</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Dichiarazioni Redditi -->
                        <div class="col-lg-4 mb-4">
                            <h6 class="text-danger fw-bold mb-3">
                                <i class="fas fa-file-alt me-1"></i>Dichiarazioni Redditi
                            </h6>
                            <div class="row">
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Mod. 730:</span>
                                        <span class="badge bg-danger">@Model.TotaleDichiarazioni.Mod730</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Mod. 740:</span>
                                        <span class="badge bg-danger">@Model.TotaleDichiarazioni.Mod740</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Mod. 750:</span>
                                        <span class="badge bg-danger">@Model.TotaleDichiarazioni.Mod750</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Mod. 760:</span>
                                        <span class="badge bg-danger">@Model.TotaleDichiarazioni.Mod760</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Mod. 770:</span>
                                        <span class="badge bg-danger">@Model.TotaleDichiarazioni.Mod770</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Mod. CU:</span>
                                        <span class="badge bg-danger">@Model.TotaleDichiarazioni.ModCu</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Mod. ENC:</span>
                                        <span class="badge bg-danger">@Model.TotaleDichiarazioni.ModEnc</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Mod. IRAP:</span>
                                        <span class="badge bg-danger">@Model.TotaleDichiarazioni.ModIrap</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Dichiarazioni IVA -->
                        <div class="col-lg-4 mb-4">
                            <h6 class="text-warning fw-bold mb-3">
                                <i class="fas fa-percentage me-1"></i>Dichiarazioni IVA
                            </h6>
                            <div class="row">
                                <div class="col-12 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>DRIVA:</span>
                                        <span class="badge bg-warning text-dark">@Model.TotaleDichiarazioni.Driva</span>
                                    </div>
                                </div>
                                <div class="col-12 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>LIPE:</span>
                                        <span class="badge bg-warning text-dark">@Model.TotaleDichiarazioni.Lipe</span>
                                    </div>
                                </div>
                                <div class="col-12 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Mod. TR IVA:</span>
                                        <span class="badge bg-warning text-dark">@Model.TotaleDichiarazioni.ModTrIva</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Attività Contabile -->
                        <div class="col-lg-4 mb-4">
                            <h6 class="text-success fw-bold mb-3">
                                <i class="fas fa-calculator me-1"></i>Attività Contabile
                            </h6>
                            <div class="row">
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>INAIL:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.Inail</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Cassetto:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.CassettoFiscale</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Fatt.Elett:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.FatturazioneElettronicaTs</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Conserv.:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.Conservazione</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>IMU:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.Imu</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Reg.IVA:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.RegIva</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Cespiti:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.RegCespiti</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Inventari:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.Inventari</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Libro:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.LibroGiornale</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Lettere:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.LettereIntento</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>INTRASTAT:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.ModIntrastat</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Firma:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.FirmaDigitale</span>
                                    </div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span>Titolare:</span>
                                        <span class="badge bg-success">@Model.TotaleDichiarazioni.TitolareEffettivo</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Totali per categoria -->
                    <hr class="my-4">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="stat-summary">
                                <h4 class="text-danger">
                                    @(Model.TotaleDichiarazioni.Mod730 + Model.TotaleDichiarazioni.Mod740 + Model.TotaleDichiarazioni.Mod750 + Model.TotaleDichiarazioni.Mod760 + Model.TotaleDichiarazioni.Mod770 + Model.TotaleDichiarazioni.ModCu + Model.TotaleDichiarazioni.ModEnc + Model.TotaleDichiarazioni.ModIrap)
                                </h4>
                                <p class="text-muted mb-0">Totale Dichiarazioni Redditi</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-summary">
                                <h4 class="text-warning">
                                    @(Model.TotaleDichiarazioni.Driva + Model.TotaleDichiarazioni.Lipe + Model.TotaleDichiarazioni.ModTrIva)
                                </h4>
                                <p class="text-muted mb-0">Totale Dichiarazioni IVA</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-summary">
                                <h4 class="text-success">
                                    @(Model.TotaleDichiarazioni.Inail + Model.TotaleDichiarazioni.CassettoFiscale + Model.TotaleDichiarazioni.FatturazioneElettronicaTs + Model.TotaleDichiarazioni.Conservazione + Model.TotaleDichiarazioni.Imu + Model.TotaleDichiarazioni.RegIva + Model.TotaleDichiarazioni.RegCespiti + Model.TotaleDichiarazioni.Inventari + Model.TotaleDichiarazioni.LibroGiornale + Model.TotaleDichiarazioni.LettereIntento + Model.TotaleDichiarazioni.ModIntrastat + Model.TotaleDichiarazioni.FirmaDigitale + Model.TotaleDichiarazioni.TitolareEffettivo)
                                </h4>
                                <p class="text-muted mb-0">Totale Attività Contabile</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stat-item {
            padding: 1rem 0;
            border-radius: 8px;
            transition: transform 0.2s ease;
        }

        .stat-item:hover {
            transform: translateY(-2px);
            background-color: #f8f9fa;
        }

        .stat-summary {
            padding: 1rem;
            border-radius: 8px;
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
        }

        .table th {
            border-top: none;
            font-weight: 600;
        }

        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
            border-bottom: none;
        }

        .badge {
            font-size: 0.8rem;
            padding: 0.4em 0.6em;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .stat-item h3 {
                font-size: 2rem;
            }
            
            .table-responsive {
                font-size: 0.9rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        // Auto-refresh every 5 minutes
        setTimeout(function() {
            location.reload();
        }, 300000);
    </script>
}
