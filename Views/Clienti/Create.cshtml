@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Script per gestire il riepilogo dinamico delle proforma
        document.addEventListener('DOMContentLoaded', async function() {
            const proformaTipoSelect = document.getElementById('proformaTipo');
            const importoInput = document.getElementById('importoMandatoAnnuo');
            const riepilogoContainer = document.getElementById('riepilogoProforma');
            const titoloRiepilogo = document.getElementById('titoloRiepilogo');
            const contenutoRiepilogo = document.getElementById('contenutoRiepilogo');
            
            // Ottiene l'anno fatturazione corrente
            let annoCorrente = 2025; // Default
            try {
                const response = await fetch('/Clienti/GetAnnoFatturazioneCorrente');
                const data = await response.json();
                if (data.anno) annoCorrente = data.anno;
            } catch (error) {
                console.log('Usando anno default 2025');
            }
            
            // Date fisse per trimestri
            const dateTrimestrali = [
                { data: `31/03/${annoCorrente}`, mese: 'Q1' },
                { data: `30/06/${annoCorrente}`, mese: 'Q2' },
                { data: `30/09/${annoCorrente}`, mese: 'Q3' },
                { data: `31/12/${annoCorrente}`, mese: 'Q4' }
            ];
            
            // Date per mesi (gestisce anni bisestili)
            function getDateMensili(anno) {
                const isLeapYear = anno % 4 === 0 && (anno % 100 !== 0 || anno % 400 === 0);
                return [
                    { data: `31/01/${anno}`, mese: 'Gen' },
                    { data: `${isLeapYear ? '29' : '28'}/02/${anno}`, mese: 'Feb' },
                    { data: `31/03/${anno}`, mese: 'Mar' },
                    { data: `30/04/${anno}`, mese: 'Apr' },
                    { data: `31/05/${anno}`, mese: 'Mag' },
                    { data: `30/06/${anno}`, mese: 'Giu' },
                    { data: `31/07/${anno}`, mese: 'Lug' },
                    { data: `31/08/${anno}`, mese: 'Ago' },
                    { data: `30/09/${anno}`, mese: 'Set' },
                    { data: `31/10/${anno}`, mese: 'Ott' },
                    { data: `30/11/${anno}`, mese: 'Nov' },
                    { data: `31/12/${anno}`, mese: 'Dic' }
                ];
            }
            
            // Funzione per aggiornare il riepilogo
            function updateRiepilogo() {
                const importoAnnuo = parseFloat(importoInput.value) || 0;
                const periodicita = proformaTipoSelect.value;
                
                if (importoAnnuo <= 0) {
                    riepilogoContainer.style.display = 'none';
                    return;
                }
                
                riepilogoContainer.style.display = 'block';
                
                if (periodicita === 'trimestrale') {
                    const importoTrimestrale = (importoAnnuo / 4).toFixed(2);
                    titoloRiepilogo.textContent = 'Riepilogo Proforma Trimestrali (Anteprima)';
                    
                    let html = '<div class="col-12"><div class="table-responsive"><table class="table table-sm table-striped">';
                    html += '<thead class="table-success"><tr><th>Trimestre</th><th>Data Scadenza</th><th>Importo</th></tr></thead><tbody>';
                    html += '<tr><td colspan="3" class="text-muted text-center"><i class="fas fa-info-circle me-1"></i>Le proforma saranno generate automaticamente dopo il salvataggio del cliente</td></tr>';
                    
                    dateTrimestrali.forEach(item => {
                        html += `<tr><td><strong>${item.mese}</strong></td><td>${item.data}</td><td><strong>€${importoTrimestrale}</strong></td></tr>`;
                    });
                    
                    html += '</tbody></table></div></div>';
                    contenutoRiepilogo.innerHTML = html;
                    
                } else if (periodicita === 'bimestrale') {
                    const importoBimestrale = (importoAnnuo / 6).toFixed(2);
                    titoloRiepilogo.textContent = 'Riepilogo Proforma Bimestrali (Anteprima)';
                    
                    // Date bimestrali: ogni 2 mesi (6 rate all'anno)
                    const isLeapYear = annoCorrente % 4 === 0 && (annoCorrente % 100 !== 0 || annoCorrente % 400 === 0);
                    const dateBimestrali = [
                        { mese: 'Gen-Feb', data: `${isLeapYear ? '29' : '28'}/02/${annoCorrente}` },
                        { mese: 'Mar-Apr', data: `30/04/${annoCorrente}` },
                        { mese: 'Mag-Giu', data: `30/06/${annoCorrente}` },
                        { mese: 'Lug-Ago', data: `31/08/${annoCorrente}` },
                        { mese: 'Set-Ott', data: `31/10/${annoCorrente}` },
                        { mese: 'Nov-Dic', data: `31/12/${annoCorrente}` }
                    ];
                    
                    let html = '<div class="col-12"><div class="table-responsive"><table class="table table-sm table-striped">';
                    html += '<thead class="table-success"><tr><th>Periodo</th><th>Data Scadenza</th><th>Importo</th></tr></thead><tbody>';
                    html += '<tr><td colspan="3" class="text-muted text-center"><i class="fas fa-info-circle me-1"></i>Le proforma saranno generate automaticamente dopo il salvataggio del cliente</td></tr>';
                    
                    dateBimestrali.forEach(item => {
                        html += `<tr><td><strong>${item.mese}</strong></td><td>${item.data}</td><td><strong>€${importoBimestrale}</strong></td></tr>`;
                    });
                    
                    html += '</tbody></table></div></div>';
                    contenutoRiepilogo.innerHTML = html;
                    
                } else if (periodicita === 'semestrale') {
                    const importoSemestrale = (importoAnnuo / 2).toFixed(2);
                    titoloRiepilogo.textContent = 'Riepilogo Proforma Semestrali (Anteprima)';
                    
                    // Date semestrali: 2 rate semestrali
                    const dateSemestrali = [
                        { mese: '1° Semestre', data: `30/06/${annoCorrente}` },
                        { mese: '2° Semestre', data: `31/12/${annoCorrente}` }
                    ];
                    
                    let html = '<div class="col-12"><div class="table-responsive"><table class="table table-sm table-striped">';
                    html += '<thead class="table-success"><tr><th>Periodo</th><th>Data Scadenza</th><th>Importo</th></tr></thead><tbody>';
                    html += '<tr><td colspan="3" class="text-muted text-center"><i class="fas fa-info-circle me-1"></i>Le proforma saranno generate automaticamente dopo il salvataggio del cliente</td></tr>';
                    
                    dateSemestrali.forEach(item => {
                        html += `<tr><td><strong>${item.mese}</strong></td><td>${item.data}</td><td><strong>€${importoSemestrale}</strong></td></tr>`;
                    });
                    
                    html += '</tbody></table></div></div>';
                    contenutoRiepilogo.innerHTML = html;
                    
                } else if (periodicita === 'mensile') {
                    const importoMensile = (importoAnnuo / 12).toFixed(2);
                    titoloRiepilogo.textContent = 'Riepilogo Proforma Mensili (Anteprima)';
                    
                    const dateMensili = getDateMensili(annoCorrente);
                    
                    let html = '<div class="col-12"><div class="table-responsive"><table class="table table-sm table-striped">';
                    html += '<thead class="table-success"><tr><th>Mese</th><th>Data Scadenza</th><th>Importo</th></tr></thead><tbody>';
                    html += '<tr><td colspan="3" class="text-muted text-center"><i class="fas fa-info-circle me-1"></i>Le proforma saranno generate automaticamente dopo il salvataggio del cliente</td></tr>';
                    
                    dateMensili.forEach(item => {
                        html += `<tr><td><strong>${item.mese}</strong></td><td>${item.data}</td><td><strong>€${importoMensile}</strong></td></tr>`;
                    });
                    
                    html += '</tbody></table></div></div>';
                    contenutoRiepilogo.innerHTML = html;
                }
            }
            
            // Event listeners
            proformaTipoSelect.addEventListener('change', updateRiepilogo);
            importoInput.addEventListener('input', updateRiepilogo);
            
            // Inizializza
            updateRiepilogo();
        });
    </script>
}
