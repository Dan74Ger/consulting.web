@{
    ViewData["Title"] = ViewData["PageTitle"]?.ToString() ?? "In Sviluppo";
}

<div class="placeholder-page">
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-tools fa-5x text-muted"></i>
        </div>
        
        <h1 class="h2 mb-3">@ViewData["PageTitle"]</h1>
        
        <div class="alert alert-info d-inline-block">
            <i class="fas fa-info-circle me-2"></i>
            @ViewData["Message"]
        </div>
        
        <div class="mt-4">
            <p class="text-muted">
                Questa funzionalità sarà disponibile nelle prossime versioni del sistema.
            </p>
            
            <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>
                Torna alla Dashboard
            </a>
        </div>
    </div>
</div>