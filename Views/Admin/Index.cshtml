@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-0">
                <i class="fas fa-tachometer-alt me-2 text-primary"></i>
                Dashboard Amministratore
            </h1>
            <p class="text-muted mb-0">
                Benvenuto, @ViewData["UserName"]
                @if (ViewData["LastLogin"] != null)
                {
                    <small> - Ultimo accesso: @ViewData["LastLogin"]</small>
                }
            </p>
        </div>
        <div class="text-end">
            <span class="badge bg-success">
                <i class="fas fa-circle me-1"></i> Online
            </span>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Utenti Totali
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewData["TotalUsers"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Utenti Attivi
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewData["ActiveUsers"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Amministratori
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewData["AdminUsers"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-shield fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Utenti Inattivi
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewData["InactiveUsers"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-times fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-rocket me-2"></i>
                        Azioni Rapide
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-controller="UserManagement" asp-action="Create" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-user-plus mb-2 d-block fa-2x"></i>
                                Nuovo Utente
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="UserManagement" asp-action="Index" class="btn btn-info btn-lg w-100">
                                <i class="fas fa-users mb-2 d-block fa-2x"></i>
                                Gestisci Utenti
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Admin" asp-action="GestioneAmministrativa" class="btn btn-secondary btn-lg w-100">
                                <i class="fas fa-cogs mb-2 d-block fa-2x"></i>
                                Amministrazione
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>
                        Informazioni Sistema
                    </h6>
                </div>
                <div class="card-body">
                    <div class="small">
                        <div class="mb-2">
                            <strong>Versione:</strong> 1.0.0
                        </div>
                        <div class="mb-2">
                            <strong>Database:</strong> SQL Server Express
                        </div>
                        <div class="mb-2">
                            <strong>Server:</strong> IT15\SQLEXPRESS
                        </div>
                        <div class="mb-2">
                            <strong>Ultimo Backup:</strong> N/A
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-history me-2"></i>
                        Attività Recenti
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-clock fa-3x mb-3"></i>
                        <p>Nessuna attività recente da visualizzare.</p>
                        <small>Le attività degli utenti verranno visualizzate qui quando disponibili.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>